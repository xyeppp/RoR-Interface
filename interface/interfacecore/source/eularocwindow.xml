<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
  <Scripts>
    <Script file="Source/EULAROCWindow.lua" />
  </Scripts>
  <Windows>

    <Window name="EA_Window_EULAROC" movable="false" layer="secondary" savesettings="false" >
      <Anchors>
        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
      </Anchors>
      <EventHandlers>
        <EventHandler event="OnInitialize" function="EA_Window_EULAROCPopup.Initialize" />
        <EventHandler event="OnShutdown" function="EA_Window_EULAROCPopup.Shutdown" />
      </EventHandlers>
      <Windows>
        <!-- Background Tint -->
        <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false" layer="background" alpha="0.5">
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
            <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
          </Anchors>
          <TintColor r="0" g="0" b="0" />
        </FullResizeImage>
        <Window name="$parentPopup" movable="false" layer="secondary" savesettings="false" >
          <Size>
            <AbsPoint x="800" y="650" />
          </Size>
          <Anchors>
            <Anchor point="center" relativePoint="center" relativeTo="">
              <AbsPoint x="0" y="0" />
            </Anchor>
          </Anchors>
          <Windows>
            <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" />
            <Window name="$parentTitleBar" inherits="EA_TitleBar_RolePlayPopupWindow" />
            <Window name="$parentButtonBackground" inherits="EA_Window_DefaultButtonBottomFrame" layer="background" >
              <Size>
                <AbsPoint x="0" y="120" />
              </Size>
            </Window>
            <Window name="$parentAnchor" movable="false" layer="secondary">
              <Anchors>
                <Anchor point="bottom" relativePoint="bottom" relativeTo="$parent" >
                  <AbsPoint x="0" y="-35" />
                </Anchor>
              </Anchors>
            </Window>
            <Button name="$parentAcceptButton" inherits="EA_Button_DefaultResizeable">
              <Anchors>
                <Anchor point="right" relativePoint="left" relativeTo="$parentAnchor" >
                  <AbsPoint x="50" y="0" />
                </Anchor>
              </Anchors>
              <EventHandlers>
                <EventHandler event="OnLButtonUp" function="EA_Window_EULAROCPopup.Accept" />
              </EventHandlers>
              <TextColors>
                <Disabled r="75"  g="75"  b="75" a="255"/>
              </TextColors>
            </Button>
            <Button name="$parentDeclineButton" inherits="EA_Button_DefaultResizeable">
              <Anchors>
                <Anchor point="left" relativePoint="right" relativeTo="$parentAnchor" >
                  <AbsPoint x="-50" y="0" />
                </Anchor>
              </Anchors>
              <EventHandlers>
                <EventHandler event="OnLButtonUp" function="EA_Window_EULAROCPopup.Decline" />
              </EventHandlers>
            </Button>
            <Button name="$parentAgreeCheckbox" inherits="EA_Button_DefaultCheckBox">
              <Anchors>
                <Anchor point="topleft" relativePoint="bottomleft" relativeTo="$parentDeclineButton" >
                  <AbsPoint x="-150" y="-20" />
                </Anchor>
              </Anchors>
              <EventHandlers>
                <EventHandler event="OnLButtonUp" function="EA_Window_EULAROCPopup.ToggleAgreeCheckbox" />
              </EventHandlers>
            </Button>
            <Label name="$parentAgreeCheckboxLabel" wordwrap="true" font="font_default_text" maxchars="150" inherits="DefaultWindowText" handleinput="true" textalign="leftcenter">
              <Size>
                <AbsPoint x="650" y="50" />
              </Size>
              <Anchors>
                <Anchor point="right" relativePoint="left" relativeTo="$parentAgreeCheckbox">
                  <AbsPoint x="10" y="0" />
                </Anchor>
              </Anchors>
              <EventHandlers>
                <EventHandler event="OnLButtonUp" function="EA_Window_EULAROCPopup.ToggleAgreeCheckboxFromLabel" />
                <EventHandler event="OnMouseOver" function="EA_Window_EULAROCPopup.MouseOverCheckboxLabel" />
                <EventHandler event="OnMouseOverEnd" function="EA_Window_EULAROCPopup.MouseOverEndCheckboxLabel" />
              </EventHandlers>
            </Label>
            <LogDisplay name="$parentLogDisplay" font="font_chat_text_bold" scrollbar="$parentScrollbar" scrollbarPosition="right" textFadeTime="0" background="" maxchars="500" maxentries="2500" >
              <Size>
                <AbsPoint x="550" y="260" />
              </Size>
              <Anchors>
                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentTitleBar">
                  <AbsPoint x="10" y="5" />
                </Anchor>
                <Anchor point="topright" relativePoint="bottomright" relativeTo="$parentButtonBackground">
                  <AbsPoint x="-5" y="10" />
                </Anchor>
              </Anchors>
              <Windows>

                <VerticalScrollbar name="$parentScrollbar" inherits="EA_ScrollBar_DefaultVerticalChain" layer="popup">
                  <Anchors>
                    <Anchor point="topright" relativePoint="topright" relativeTo="$parent">
                      <AbsPoint x="0" y="0" />
                    </Anchor>
                    <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                      <AbsPoint x="0" y="0" />
                    </Anchor>
                  </Anchors>
                  <ActiveZoneOffset x="200" y="0" />
                </VerticalScrollbar>
              </Windows>
              <TextOffset x="0" y="10" />
            </LogDisplay>
          </Windows>
        </Window>
      </Windows>
    </Window>
  </Windows>
</Interface>