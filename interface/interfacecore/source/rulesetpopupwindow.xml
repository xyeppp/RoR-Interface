<Interface xmlns:xsi="http://wutf-8.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Scripts>
		<Script file="Source/RuleSetPopupWindow.lua" />
	</Scripts>
	<Windows>
      <Window name="EA_TitleBar_RolePlayPopupWindow">
        <Size>
          <AbsPoint x="350" y="36" />
        </Size>
        <Anchors>
          <Anchor point="topleft" relativePoint="topleft" >
            <AbsPoint x="0" y="0" />
          </Anchor>
          <Anchor point="topright" relativePoint="topright" >
            <AbsPoint x="0" y="0" />
          </Anchor>
        </Anchors>
        <Windows>
          <HorizontalResizeImage name="$parentBackground" inherits="EA_HorizontalResizeImage_DefaultTopFrame">
            <Anchors>
              <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                <AbsPoint x="0" y="1" />
              </Anchor>
              <Anchor point="topright" relativePoint="topright" relativeTo="$parent">
                <AbsPoint x="0" y="1" />
              </Anchor>
            </Anchors>
          </HorizontalResizeImage>
          <Label name="$parentText" font="font_default_war_heading" maxchars="128" textalign="center">
            <Size>
              <AbsPoint x="620" y="30" />
            </Size>
            <Anchors>
              <Anchor point="topleft" relativePoint="topleft" >
                <AbsPoint x="4" y="5" />
              </Anchor>
              <Anchor point="topright" relativePoint="topright" >
                <AbsPoint x="-4" y="5" />
              </Anchor>
            </Anchors>
            <Color r="255" g="255" b="255" a="255" />
          </Label>
        </Windows>
      </Window>

      <!-- Role Play Popup Window -->
      <Window name="EA_Window_RuleSet" movable="false" layer="secondary" savesettings="false" >
        <Anchors>
          <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
          <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
        </Anchors>
        <EventHandlers>
          <EventHandler event="OnInitialize" function="EA_Window_RuleSetPopup.Initialize" />
        </EventHandlers>
        <Windows>
          <!-- Background Tint -->
          <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false" layer="background" alpha="0.5">
            <Anchors>
              <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
              <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
            </Anchors>
            <TintColor r="0" g="0" b="0" />
          </FullResizeImage>
          <Window name="$parentPopup" movable="false" layer="secondary" savesettings="false" >
            <Size>
              <AbsPoint x="800" y="900" />
            </Size>
            <Anchors>
              <Anchor point="center" relativePoint="center" relativeTo="">
                <AbsPoint x="0" y="0" />
              </Anchor>
            </Anchors>
		    <Windows>
              <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" />
              <Window name="$parentTitleBar" inherits="EA_TitleBar_RolePlayPopupWindow" />
              <Window name="$parentButtonBackground" inherits="EA_Window_DefaultButtonBottomFrame" layer="background" >
                <Size>
                  <AbsPoint x="0" y="150" />
                </Size>
              </Window>
              <Window name="$parentAnchor" movable="false" layer="secondary">
                <Anchors>
                  <Anchor point="bottom" relativePoint="bottom" relativeTo="$parent" >
                    <AbsPoint x="0" y="-75" />
                  </Anchor>
                </Anchors>
              </Window>
              <Button name="$parentAcceptButton" inherits="EA_Button_DefaultPregameResizeable">
                <Anchors>
                  <Anchor point="left" relativePoint="right" relativeTo="$parentAnchor" >
                    <AbsPoint x="-50" y="0" />
                  </Anchor>
                </Anchors>
                <EventHandlers>
                  <EventHandler event="OnLButtonUp" function="EA_Window_RuleSetPopup.Accept" />
                </EventHandlers>
              </Button>
              <Button name="$parentDeclineButton" inherits="EA_Button_DefaultPregameResizeable">
                <Anchors>
                  <Anchor point="right" relativePoint="left" relativeTo="$parentAnchor" >
                    <AbsPoint x="50" y="0" />
                  </Anchor>
                </Anchors>
                <EventHandlers>
                  <EventHandler event="OnLButtonUp" function="EA_Window_RuleSetPopup.Decline" />
                </EventHandlers>
              </Button>
              <ScrollWindow name="$parentScrollWindow" childscrollwindow="$parentScrollChild" scrollbar="$parentScrollbar" lineheight="18" autohidescrollbar="false" >
                <Size>
                  <AbsPoint x="790" y="410" />
                </Size>
                <Anchors>
                  <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentTitleBar">
                    <AbsPoint x="5" y="5" />
                  </Anchor>
                  <Anchor point="topleft" relativePoint="bottomleft" relativeTo="$parentButtonBackground">
                    <AbsPoint x="-5" y="0" />
                  </Anchor>
                </Anchors>
                <Windows>
                  <!-- Scroll Bar -->
                  <VerticalScrollbar name="$parentScrollbar" inherits="EA_ScrollBar_DefaultVerticalChain" layer="popup">
                    <Anchors>
                      <Anchor point="topright" relativePoint="topright" relativeTo="$parent">
                        <AbsPoint x="0" y="0" />
                      </Anchor>
                    </Anchors>
                  </VerticalScrollbar>
                  <Window name="$parentScrollChild">
                    <Size>
                      <AbsPoint x="750" y="490"/>
                    </Size>
                    <Windows>
                      <Label name="$parentLabel" inherits="EA_Credits_TextTemplate" > 
                        <Size>
                          <AbsPoint x="750" y="35" /> 
                        </Size>
                        <Anchors>
                          <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="15" y="5" />
                          </Anchor>
                        </Anchors>
                        <Color r="255" g="255" b="255" a="255" />
                      </Label>
                    </Windows>
                  </Window>
                </Windows>
              </ScrollWindow>      
            </Windows>
          </Window>
        </Windows>
      </Window>
    </Windows>
</Interface>