<Interface xmlns:xsi="http://wutf-8.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
  <Scripts>
    <Script file="Source/TransferPopupWindow.lua" />
  </Scripts>
  <Windows>

    <!-- Open RvR Popup Window -->
    <Window name="EA_Window_Transfer" movable="false" layer="secondary" savesettings="false" >
      <Anchors>
        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
      </Anchors>
      <EventHandlers>
        <EventHandler event="OnInitialize" function="EA_Window_TransferPopup.Initialize" />
      </EventHandlers>
      <Windows>
        <!-- Background Tint -->
        <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false" layer="background" alpha="0.5">
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
            <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
          </Anchors>
          <TintColor r="0" g="0" b="0" />
        </FullResizeImage>
        <Window name="$parentPopup" movable="false" layer="secondary" savesettings="false" >
          <Size>
            <AbsPoint x="800" y="400" />
          </Size>
          <Anchors>
            <Anchor point="center" relativePoint="center" relativeTo="">
              <AbsPoint x="0" y="0" />
            </Anchor>
          </Anchors>
          <Windows>
            <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" />
            <Window name="$parentTitleBar" inherits="EA_TitleBar_RolePlayPopupWindow" />
            <Window name="$parentButtonBackground" inherits="EA_Window_DefaultButtonBottomFrame" layer="background" >
              <Size>
                <AbsPoint x="0" y="150" />
              </Size>
            </Window>
            <Button name="$parentOkButton" inherits="EA_Button_DefaultPregameResizeable">
              <Anchors>
                <Anchor point="bottom" relativePoint="bottom" relativeTo="$parent" >
                  <AbsPoint x="0" y="-25" />
                </Anchor>
              </Anchors>
              <EventHandlers>
                <EventHandler event="OnLButtonUp" function="EA_Window_TransferPopup.Ok" />
              </EventHandlers>
            </Button>
            <Label name="$parentLabel" inherits="EA_Credits_TextTemplate" >
              <Size>
                <AbsPoint x="750" y="35" />
              </Size>
              <Anchors>
                <Anchor point="bottom" relativePoint="top" relativeTo="$parentTitleBar">
                  <AbsPoint x="0" y="10" />
                </Anchor>
              </Anchors>
              <Color r="255" g="255" b="255" a="255" />
            </Label>
            <Label name="$parentLabelWarning" inherits="EA_Credits_TextTemplate" >
              <Size>
                <AbsPoint x="750" y="35" />
              </Size>
              <Anchors>
                <Anchor point="topleft" relativePoint="bottomleft" relativeTo="$parentAccountPageButton">
                  <AbsPoint x="0" y="-10" />
                </Anchor>
              </Anchors>
              <Color r="255" g="255" b="255" a="255" />
            </Label>
            <!-- Account Page Button -->
            <Button name="$parentAccountPageButton" inherits="EA_Button_DefaultResizeable" >
              <Size>
                <AbsPoint x="250" y="39" />
              </Size>
              <Anchors>
                <Anchor point="topleft" relativePoint="bottomleft" relativeTo="$parentButtonBackground">
                  <AbsPoint x="25" y="-10"/>
                </Anchor>
              </Anchors>
              <EventHandlers>
                <EventHandler event="OnLButtonUp" function="EA_Window_TransferPopup.OpenAccountPage" />
              </EventHandlers>
            </Button>
          </Windows>
        </Window>
      </Windows>
    </Window>
  </Windows>
</Interface>