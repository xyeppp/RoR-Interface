<!--# Title: EA_Text_Default 

    This file contains all of the definitions for the HUD menu buttons.
-->

<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

    <Windows>

        <Button name="EA_Button_HUDMenuButton" inherits="EA_Button_Default" backgroundtexture="EA_Texture_Menu01" highlighttexture="EA_Texture_Menu01" handleinput="false" >
            <Size>
                <AbsPoint x="73" y="71" />
            </Size>
        </Button>

        <DynamicImage name="EA_Image_HUDMenuButton" texture="EA_Texture_Menu01"  handleinput="false">
            <Size>
                <AbsPoint x="52" y="71" />
            </Size>
        </DynamicImage>

        <Window name="EA_Window_HUDMenuButton" >
            <Size>
                <AbsPoint x="52" y="71" />
            </Size>
        </Window>

        <!--# Window: EA_Window_HUDBag                   
            This is the default HUD bag button.
        -->
        <Window name="EA_Window_HUDBag" inherits="EA_Window_HUDMenuButton" layer="default">
            <Windows>
                <DynamicImage name="$parentGlow" texture="EA_Texture_Menu01" slice="AccentGlow" handleinput="false"  layer="background">
                    <Size>
                        <AbsPoint x="73" y="71" />
                    </Size>
                    <Anchors>
                        <Anchor point="top" relativePoint="top" relativeTo="">
                            <AbsPoint x="5" y="-10" />
                        </Anchor>
                    </Anchors>
                    <TintColor r="229" g="99" b="99" />
                </DynamicImage>

                <DynamicImage name="$parentImage" inherits="EA_Image_HUDMenuButton" slice="Bag-Button"  layer="default" />
                <Button name="$parentButton" inherits="EA_Button_HUDMenuButton"  layer="secondary">
                    <Anchors>
                        <Anchor point="top" relativePoint="top" relativeTo="">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                    <TexSlices>
                        <NormalHighlit id="Bag-Button-Highlighted" />
                        <Pressed id="Bag-Button-Selected" />
                        <PressedHighlit id="Bag-Button-Selected" />
                    </TexSlices>
                </Button>

                <Label name="$parentLabel" inherits="EA_Label_DefaultText_Small" textalign="bottom" maxchars="24" textAutoFitMinScale="0.5" handleinput="false" layer="popup">
                    <Size>
                        <AbsPoint x="73" y="71" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="bottom" relativeTo="$parentButton">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </Label>
            </Windows>
        </Window>


