<!--# Title: EA_Window_DefaultFrame

    This file contains the standard window frame which is used to make most of our windows.
-->

<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

    <Windows>
        <!--# Window: EA_Window_DefaultFrame                  
            This the default window which contains the sound definitions that are used by most
            windows when opening and closing.
            
            Code:
            (begin code)
             <Window name="EA_Window_Default">
             ...
             </Window>
            (end)
        -->
        <Window name="EA_Window_Default">
            <Sounds>
                <Sound event="OnShown" script="Sound.Play( Sound.WINDOW_OPEN )" />
                <Sound event="OnHidden" script="Sound.Play( Sound.WINDOW_CLOSE )" />
            </Sounds>
        </Window>
        
        <FullResizeImage name="EA_FullResizeImage_DefaultFrame"  handleinput="false" layer="background" texture="shared_01" frameonly="true">
            <Sizes>
                <TopLeft x="11" y="8" />
                <BottomRight x="11" y="19" />
                <Middle x="91" y="75" />
            </Sizes>
            <TexCoords>
                <TopLeft x="311" y="46" />
                <TopCenter x="322" y="46" />
                <TopRight x="413" y="46" />
                <MiddleLeft x="311" y="54" />
                <MiddleCenter x="322" y="52" />
                <MiddleRight x="413" y="54" />
                <BottomLeft x="311" y="129" />
                <BottomCenter x="322" y="129" />
                <BottomRight x="413" y="129" />
            </TexCoords>
        </FullResizeImage>

        <!--# Window: EA_Window_DefaultFrame                  
            This the default window frame used for the most of the windows in the game.
            Although it is not a FullResizeImage, it behaves like one.
            
            Code:
            (begin code)
             <Window name="EA_Window_DefaultFrame" handleinput="false" layer="background">
             ...
             </Window>
            (end)
        -->
         <Window name="EA_Window_DefaultFrame" handleinput="false" layer="background">
            <Size>
                <AbsPoint x="156" y="102" />
            </Size>
            <Windows>
                <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_BlackTransparent" >
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" >
                            <AbsPoint x="0" y="4" />
                        </Anchor>
                        <Anchor point="bottomleft" relativePoint="bottomleft" />
                    </Anchors>
                </FullResizeImage>                
                <FullResizeImage name="$parentFrame" inherits="EA_FullResizeImage_DefaultFrame" >
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" />
                        <Anchor point="bottomleft" relativePoint="bottomleft" />
                    </Anchors>
                </FullResizeImage>
                
            </Windows>
        </Window>

        <Window name="EA_Window_DefaultContextMenuFrame" handleinput="false" layer="background">
            <Size>
                <AbsPoint x="156" y="200" />
            </Size>
            <Windows>
                <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_BlackTransparent" >
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" >
                            <AbsPoint x="3" y="3" />
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" >
                            <AbsPoint x="-3" y="-3" />
                        </Anchor>
                    </Anchors>
                </FullResizeImage>

                <FullResizeImage name="$parentFrame" inherits="EA_Button_ResizeIconFrameNormal" >
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" />
                        <Anchor point="bottomleft" relativePoint="bottomleft" />
                    </Anchors>
                </FullResizeImage>

            </Windows>
        </Window>

        <HorizontalResizeImage name="EA_Window_DefaultContextMenuDivider"  texture="EA_TilableSquareFrame" layer="background">
            <Size>
                <AbsPoint x="100" y="5" />
            </Size>
            <Sizes left="0" middle="44" right="0" />
            <TexCoords>
                <Middle x="10" y="0" />
            </TexCoords>
        </HorizontalResizeImage>

        <!--# Window: EA_Window_ChatDefaultFrame                  
            This the Chat default window frame used for the chat log display background.
            Although it is not a FullResizeImage, it behaves like one.
            
            Code:
            (begin code)
             <Window name="EA_Window_ChatDefaultFrame" handleinput="false" layer="background">
             ...
             </Window>
            (end)
        -->
        <Window name="EA_Window_ChatDefaultFrame" handleinput="false" layer="background">
            <Size>
                <AbsPoint x="156" y="102" />
            </Size>
            <Windows>
                <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_BlackTransparent" >
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" >
                            <AbsPoint x="0" y="4" />
                        </Anchor>
                        <Anchor point="bottomleft" relativePoint="bottomleft" />
                    </Anchors>
                </FullResizeImage>
            </Windows>
        </Window>
        
        <!--# Window: EA_Window_ChatDefaultFrame                  
            This the Chat default window frame used for the chat log display background.
            Although it is not a FullResizeImage, it behaves like one.  This is the frame
            that is shown when the main frame is faded out.
            
            Code:
            (begin code)
             <Window name="EA_Window_ChatDefaultForegroundFrame" handleinput="false" layer="background">
             ...
             </Window>
            (end)
        -->
        <Window name="EA_Window_ChatDefaultForegroundFrame" handleinput="false" layer="background">
            <Size>
                <AbsPoint x="168" y="214" />
            </Size>
            <Windows>
                <HorizontalResizeImage name="$parentForeground" inherits="EA_FullResizeImage_ChatFadedOutTransparent" >
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" >
                            <AbsPoint x="-70" y="0" />
                        </Anchor>
                        <Anchor point="bottomleft" relativePoint="bottomleft" />
                    </Anchors>
                </HorizontalResizeImage>
                <DynamicImage name="$parentForegroundEndCap" alpha="0.8" texture="EA_HUD_01" slice="ChatGradientBackground-RightEndCap" handleinput="false" layer="background" sticky="false">
                    <Size>
                        <AbsPoint x="70" y="214" />
                    </Size>
                    <TexCoords x="98" y="278" />
                    <Anchors>
                        <Anchor point="topright" relativePoint="topleft" relativeTo="$parentForeground">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright"/>
                    </Anchors>
                </DynamicImage>
            </Windows>
        </Window>
        
        <FullResizeImage name="EA_FullResizeImage_ChatInputDefaultFrame"  handleinput="false" layer="background" texture="EA_HUD_01" frameonly="false">
            <Sizes>
                <TopLeft x="15" y="10" />
                <BottomRight x="15" y="10" />
                <Middle x="69" y="9" />
            </Sizes>
            <TexCoords>
                <TopLeft x="333" y="439" />
                <TopCenter x="348" y="439" />
                <TopRight x="417" y="439" />
                <MiddleLeft x="333" y="449" />
                <MiddleCenter x="348" y="449" />
                <MiddleRight x="417" y="449" />
                <BottomLeft x="333" y="458" />
                <BottomCenter x="348" y="458" />
                <BottomRight x="417" y="458" />
            </TexCoords>
        </FullResizeImage>
        <!--# Window: EA_Window_DefaultBackgroundFrame                  
            This the default window backround for use with a an EA_TitleBar_Default
            
            Code:
            (begin code)
             <Window name="EA_Window_DefaultBackgroundFrame" inherits="EA_Window_DefaultFrame" >
             ...
             </Window>
            (end)
        -->
        <Window name="EA_Window_DefaultBackgroundFrame" inherits="EA_Window_DefaultFrame" >
            <Anchors>
                <Anchor point="topleft" relativePoint="topleft" >
                    <AbsPoint x="0" y="30" />
                </Anchor>
                <Anchor point="bottomright" relativePoint="bottomright" />
            </Anchors>
        </Window>


        <!--# Window: EA_Window_DefaultButtonBottomFrame                  
            This the default window backround for buttons at the bottom of the window
            
            Code:
            (begin code)
             <Window name="EA_Window_DefaultBackgroundFrame" inherits="EA_Window_DefaultButtonBottomFrame" >
             ...
             </Window>
            (end)
        -->
        <Window name="EA_Window_DefaultButtonBottomFrame" handleinput="false"  layer="background" >
            <Size>
                <AbsPoint x="0" y="65" />
            </Size>
            <Anchors>
                <Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="">
                    <AbsPoint x="0" y="-5"/>
                </Anchor>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="">
                    <AbsPoint x="0" y="-5"/>
                </Anchor>
            </Anchors>
            <Windows>
                <FullResizeImage name="$parentButtonBackgroundFill" inherits="EA_FullResizeImage_MetalFill" handleinput="false" layer="background">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="">
                            <AbsPoint x="8" y="10"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="">
                            <AbsPoint x="-8" y="-3"/>
                        </Anchor>
                    </Anchors>
                </FullResizeImage>                
               <Window name="$parentSeparatorBottom" inherits="EA_Window_DefaultSeparator" handleinput="false" >
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="" >
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                        <Anchor point="topright" relativePoint="topright" relativeTo="" >
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </Window>
            </Windows>
        </Window>


        <!--# DynamicImage: EA_DynamicImage_DefaultSeparatorRight                  
            This the default image used for the right separator.
            
            Code:
            (begin code)
             <DynamicImage name="EA_DynamicImage_DefaultSeparatorRight" texture="shared_01" handleinput="false" layer="background" sticky="false">
             ...
             </DynamicImage>
            (end)
        -->
        <DynamicImage name="EA_DynamicImage_DefaultSeparatorRight" texture="shared_01" slice="Window-Frame-Separator-Right" handleinput="false" layer="background" sticky="false">
            <Size>
                <AbsPoint x="24" y="28" />
            </Size>
            <TexCoords x="210" y="228" />
        </DynamicImage>

        <!--# DynamicImage: EA_DynamicImage_DefaultSeparatorLeft                  
            This the default image used for the left separator.
            
            Code:
            (begin code)
             <DynamicImage name="EA_DynamicImage_DefaultSeparatorLeft" texture="shared_01" handleinput="false" layer="background" sticky="false">
             ...
             </DynamicImage>
            (end)
        -->
        <DynamicImage name="EA_DynamicImage_DefaultSeparatorLeft" texture="shared_01" slice="Window-Frame-Separator-Left" handleinput="false" layer="background" sticky="false">
            <Size>
                <AbsPoint x="24" y="28" />
            </Size>
            <TexCoords x="186" y="228" />
        </DynamicImage>

        <HorizontalResizeImage name="EA_HorizontalResizeImage_DefaultSeparatorMiddle" texture="shared_01" handleinput="false" layer="background" sticky="false">
            <Size>
                <AbsPoint x="75" y="8" />
            </Size>
            <Sizes left="0" middle="75" right="0" />
            <TexSlices>
                <Middle id="Window-Frame-Span" />
            </TexSlices>
        </HorizontalResizeImage>
        
        <HorizontalResizeImage name="EA_HorizontalResizeImage_DefaultSeparator" texture="shared_01" handleinput="false" layer="background" sticky="false">
            <Size>
                <AbsPoint x="87" y="28" />
            </Size>
            <Sizes left="24" middle="39" right="24" />
            <TexCoords>
                <Left x="186" y="228" />
                <Middle x="333" y="130" />
                <Right x="210" y="228" />
            </TexCoords>
        </HorizontalResizeImage>

        <!--# Window: EA_Window_DefaultSeparator                 
            This the default separator window used for the separation of most windows in the game.
            Code:
            (begin code)
             <Window name="EA_Window_DefaultSeparator" handleinput="false" layer="background">
             ...
             </Window>
            (end)
        -->
        <Window name="EA_Window_DefaultSeparator" handleinput="false" layer="background">
            <Size>
                <AbsPoint x="123" y="28" />
            </Size>
            
            <Windows>
                <DynamicImage name="$parentRightSeparator" inherits="EA_DynamicImage_DefaultSeparatorRight" layer="default">
                    <Anchors>
                        <Anchor point="right" relativePoint="right" />
                    </Anchors>
                </DynamicImage>

                <DynamicImage name="$parentLeftSeparator" inherits="EA_DynamicImage_DefaultSeparatorLeft" layer="default">
                    <Anchors>
                        <Anchor point="left" relativePoint="left" />
                    </Anchors>
                </DynamicImage>

                <HorizontalResizeImage name="$parentMiddleSeparator" inherits="EA_HorizontalResizeImage_DefaultSeparatorMiddle" layer="background">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft">
                            <AbsPoint x="0" y="10" />
                        </Anchor>
                        <Anchor point="topright" relativePoint="topright">
                            <AbsPoint x="0" y="10" />
                        </Anchor>
                    </Anchors>
                </HorizontalResizeImage>
            </Windows>
        </Window>

        <!--# Window: EA_Window_TabSeparator                 
            This the a separator window used for framing a tabbed window.  Place it below the tab buttons for best results.
            Code:
            (begin code)
             <Window name="EA_Window_TabSeparator" handleinput="false" >
             ...
             </Window>
            (end)
        -->
        <DynamicImage name="EA_DynamicImage_TabSeparatorRight" texture="shared_01" slice="Tab-Frame-Right-Corner" handleinput="false" layer="background" sticky="false">
            <Size>
                <AbsPoint x="10" y="20" />
            </Size>
            <TexCoords x="400" y="56" />
        </DynamicImage>

        <DynamicImage name="EA_DynamicImage_TabSeparatorLeft" texture="shared_01" slice="Tab-Frame-Left-Corner" handleinput="false" layer="background" sticky="false">
            <Size>
                <AbsPoint x="10" y="20" />
            </Size>
            <TexCoords x="389" y="56" />
        </DynamicImage>

        <HorizontalResizeImage name="EA_HorizontalResizeImage_TabSeparatorMiddle" texture="shared_01" handleinput="false" layer="background" sticky="false">
            <Size>
                <AbsPoint x="125" y="5" />
            </Size>
            <Sizes left="0" middle="125" right="0" />
            <TexCoords>
                <Middle x="131" y="164" />
            </TexCoords>
        </HorizontalResizeImage>
        
        <Window name="EA_Window_TabSeparator" handleinput="false" >
            <Size>
                <AbsPoint x="126" y="20" />
            </Size>

            <Windows>
                <DynamicImage name="$parentRightSeparator" inherits="EA_DynamicImage_TabSeparatorRight" layer="default">
                    <Anchors>
                        <Anchor point="right" relativePoint="right" />
                    </Anchors>
                </DynamicImage>

                <DynamicImage name="$parentLeftSeparator" inherits="EA_DynamicImage_TabSeparatorLeft" layer="default">
                    <Anchors>
                        <Anchor point="left" relativePoint="left" />
                    </Anchors>
                </DynamicImage>

                <HorizontalResizeImage name="$parentSeparator" inherits="EA_HorizontalResizeImage_TabSeparatorMiddle" layer="background">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" >
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                        <Anchor point="topright" relativePoint="topright" >
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </HorizontalResizeImage>
            </Windows>
        </Window>
        
        <Window name="EA_Window_TabSeparatorLeftSide" handleinput="false" >
            <Size>
                <AbsPoint x="126" y="20" />
            </Size>

            <Windows>

                <DynamicImage name="$parentLeftSeparator" inherits="EA_DynamicImage_TabSeparatorLeft" layer="default">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" />
                    </Anchors>
                </DynamicImage>

                <HorizontalResizeImage name="$parentSeparator" inherits="EA_HorizontalResizeImage_TabSeparatorMiddle" layer="background">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" >
                            <AbsPoint x="7" y="1" />
                        </Anchor>
                        <Anchor point="topright" relativePoint="topright" >
                            <AbsPoint x="0" y="1" />
                        </Anchor>
                    </Anchors>
                </HorizontalResizeImage>
            </Windows>
        </Window>
        
        <Window name="EA_Window_TabSeparatorRightSide" handleinput="false" >
            <Size>
                <AbsPoint x="10" y="20" />
            </Size>

            <Windows>
                <DynamicImage name="$parentRightSeparator" inherits="EA_DynamicImage_TabSeparatorRight" layer="default">
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" />
                    </Anchors>
                </DynamicImage>

                <HorizontalResizeImage name="$parentSeparator" inherits="EA_HorizontalResizeImage_TabSeparatorMiddle" layer="background">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" >
                            <AbsPoint x="0" y="1" />
                        </Anchor>
                        <Anchor point="topright" relativePoint="topright" >
                            <AbsPoint x="-7" y="1" />
                        </Anchor>
                    </Anchors>
                </HorizontalResizeImage>
            </Windows>
        </Window>
      
      <!--New template for Vertical Separators-->
      
