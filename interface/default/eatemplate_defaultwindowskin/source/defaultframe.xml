      <!--# Window: EA_Window_DefaultVerticalSeparator                 
            This the default separator window used for the vertical separation of most windows in the game.
            Code:
            (begin code)
             <Window name="EA_Window_DefaultVerticalSeparator" handleinput="false" layer="background">
             ...
             </Window>
            (end)
        -->
      <Window name="EA_Window_DefaultVerticalSeparator" handleinput="false" layer="background">
        <Size>
          <AbsPoint x="28" y="123" />
        </Size>

        <Windows>
          <DynamicImage name="$parentTopSeparator" inherits="EA_DynamicImage_DefaultVerticalSeparatorTop" layer="default">
            <Anchors>
              <Anchor point="top" relativePoint="top" />
            </Anchors>
          </DynamicImage>

          <DynamicImage name="$parentBottomSeparator" inherits="EA_DynamicImage_DefaultVerticalSeparatorBottom" layer="default">
            <Anchors>
              <Anchor point="bottom" relativePoint="bottom" />
            </Anchors>
          </DynamicImage>

          <VerticalResizeImage name="$parentMiddleSeparator" inherits="EA_VerticalResizeImage_DefaultVerticalSeparatorMiddle" layer="background">
            <Anchors>
              <Anchor point="topleft" relativePoint="topleft">
                <AbsPoint x="10" y="0" />
              </Anchor>
              <Anchor point="bottomright" relativePoint="bottomright">
                <AbsPoint x="-10" y="0" />
              </Anchor>
            </Anchors>
          </VerticalResizeImage>
        </Windows>
      </Window>
    
      <!--# Window: EA_Window_DefaultVerticalSeparatorWithoutTop
            This is the same as EA_Window_DefaultVerticalSeparator, just without the top "T" piece,
            useful for dividing windows without a horizontal separator up top, like the title bar or tabs
        -->
      <Window name="EA_Window_DefaultVerticalSeparatorWithoutTop" handleinput="false" layer="background">
        <Size>
          <AbsPoint x="28" y="123" />
        </Size>

        <Windows>
          <DynamicImage name="$parentBottomSeparator" inherits="EA_DynamicImage_DefaultVerticalSeparatorBottom" layer="default">
            <Anchors>
              <Anchor point="bottom" relativePoint="bottom" />
            </Anchors>
          </DynamicImage>

          <VerticalResizeImage name="$parentMiddleSeparator" inherits="EA_VerticalResizeImage_DefaultVerticalSeparatorMiddle" layer="background">
            <Anchors>
              <Anchor point="topleft" relativePoint="topleft">
                <AbsPoint x="10" y="0" />
              </Anchor>
              <Anchor point="bottomright" relativePoint="bottomright">
                <AbsPoint x="-10" y="0" />
              </Anchor>
            </Anchors>
          </VerticalResizeImage>
        </Windows>
      </Window>
      
      
      
    </Windows>
    
</Interface>
