<!--# Title: EA_StatusBar_HUDDefault 

    This file contains the the templates for the HUD statusbar windows - status bars, background frames, and tick marks.
-->

<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

    <Windows>



        <!--# StatusBar: EA_StatusBar_DefaultTintable         
            This is a default Xp status bar. This does not have a background image.
        -->
        <StatusBar name="EA_StatusBar_Xp" foreground="EA_StatusBar_XpForeground" >
            <Size>
                <AbsPoint x="22" y="6" />
            </Size>
        </StatusBar>
        <HorizontalResizeImage name="EA_StatusBar_XpForeground" texture="EA_HUD_01" >
            <Size>
                <AbsPoint x="84" y="6" />
            </Size>
            <Sizes left="0" middle="84" right="0" />
            <TexSlices>
                <Left id="" />
                <Middle id="XP-Fill" />
                <Right id="" />
            </TexSlices>
        </HorizontalResizeImage>

        <StatusBar name="EA_StatusBar_GainedXp" foreground="EA_StatusBar_GainedXpForeground" >
            <Size>
                <AbsPoint x="22" y="6" />
            </Size>
        </StatusBar>
        <HorizontalResizeImage name="EA_StatusBar_GainedXpForeground" texture="EA_HUD_01" >
            <Size>
                <AbsPoint x="84" y="6" />
            </Size>
            <Sizes left="0" middle="84" right="0" />
            <TexSlices>
                <Left id="" />
                <Middle id="XP-Fill-GAIN" />
                <Right id="" />
            </TexSlices>
        </HorizontalResizeImage>

        <!--# StatusBar: EA_StatusBar_Rp         
            This is a default Rp status bar. This does not have a background image.
        -->
        <StatusBar name="EA_StatusBar_Rp" foreground="EA_StatusBar_RpForeground" >
            <Size>
                <AbsPoint x="22" y="8" />
            </Size>
        </StatusBar>

        <HorizontalResizeImage name="EA_StatusBar_RpForeground" texture="EA_HUD_01" >
            <Size>
                <AbsPoint x="84" y="8" />
            </Size>
            <Sizes left="0" middle="84" right="0" />
            <TexCoords>
                <Left x="0" y="0" />
                <Middle x="0" y="38" />
                <Right x="0" y="0" />
            </TexCoords>
        </HorizontalResizeImage>

        <HorizontalResizeImage name="EA_StatusBar_RpBackground" texture="EA_HUD_01" >
            <Size>
                <AbsPoint x="84" y="6" />
            </Size>
            <Sizes left="0" middle="84" right="0" />
            <TexCoords>
                <Left x="0" y="0" />
                <Middle x="0" y="12" />
                <Right x="0" y="0" />
            </TexCoords>
        </HorizontalResizeImage>

        <!--# HorizontalResizeImage: EA_HorizontalResizeImage_HUDStatusBarBackgroundNarrow         
            This is a default HUD statusbar narrow frame.
        -->
        <HorizontalResizeImage name="EA_HorizontalResizeImage_HUDStatusBarBackgroundNarrow" texture="EA_HUD_01" >
            <Size>
                <AbsPoint x="84" y="12" />
            </Size>
            <Sizes left="0" middle="84" right="0" />
            <TexSlices>
                <Left id="" />
                <Middle id="XP-Bar-BG" />
                <Right id="" />
            </TexSlices>
        </HorizontalResizeImage>

        <!--# HorizontalResizeImage: EA_HorizontalResizeImage_HUDStatusBarBackgroundNarrow         
            This is a default HUD statusbar narrow with the highlight texture.
        -->
        <HorizontalResizeImage name="EA_HorizontalResizeImage_HUDStatusBarBackgroundNarrowBright" texture="EA_HUD_01" >
            <Size>
                <AbsPoint x="84" y="12" />
            </Size>
            <Sizes left="0" middle="84" right="0" />
            <TexSlices>
                <Left id="" />
                <Middle id="XP-Bar-BG-BONUS" />
                <Right id="" />
            </TexSlices>
        </HorizontalResizeImage>

        <!--# HorizontalResizeImage: EA_StatusBar_DefaultTintable         
            This is a default HUD statusbar frame.
        -->
        <HorizontalResizeImage name="EA_HorizontalResizeImage_HUDStatusBarBackgroundWide" texture="EA_HUD_01" >
            <Size>
                <AbsPoint x="84" y="14" />
            </Size>
            <Sizes left="0" middle="84" right="0" />
            <TexCoords>
                <Left x="0" y="0" />
                <Middle x="0" y="24" />
                <Right x="0" y="0" />
            </TexCoords>
        </HorizontalResizeImage>




        <DynamicImage name="EA_DynamicImage_HUDStatusBar_SquareEndCap_Left" texture="EA_HUD_01" slice="Renown-Influence-Bar-Left-Endcap" >
            <Size>
                <AbsPoint x="17" y="14" />
            </Size>
        </DynamicImage>
        <DynamicImage name="EA_DynamicImage_HUDStatusBar_SquareEndCap_Right" texture="EA_HUD_01" slice="Renown-Influence-Bar-Right-Endcap" >
            <Size>
                <AbsPoint x="17" y="14" />
            </Size>
        </DynamicImage>


        <DynamicImage name="EA_DynamicImage_HUDStatusBar_AngledEndCap_Left" texture="EA_HUD_01" slice="XP-Bar-Left-Endcap" >
            <Size>
                <AbsPoint x="22" y="12" />
            </Size>
        </DynamicImage>
        <DynamicImage name="EA_DynamicImage_HUDStatusBar_AngledEndCap_Right" texture="EA_HUD_01" slice="XP-Bar-Right-Endcap" >
            <Size>
                <AbsPoint x="22" y="12" />
            </Size>
        </DynamicImage>

        <DynamicImage name="EA_DynamicImage_HUDStatusBar_AngledEndCap_LeftBright" texture="EA_HUD_01" slice="XP-Bar-Left-Endcap-BONUS" >
            <Size>
                <AbsPoint x="22" y="12" />
            </Size>
        </DynamicImage>
        <DynamicImage name="EA_DynamicImage_HUDStatusBar_AngledEndCap_RightBright" texture="EA_HUD_01" slice="XP-Bar-Right-Endcap-BONUS" >
            <Size>
                <AbsPoint x="22" y="12" />
            </Size>
        </DynamicImage>


        <DynamicImage name="EA_DynamicImage_HUDStatusBar_NarrowTickMark" texture="EA_HUD_01" slice="XP-Bar-Separator" handleinput="false" layer="secondary" sticky="false">
            <Size>
                <AbsPoint x="11" y="12" />
            </Size>
        </DynamicImage>

        <DynamicImage name="EA_DynamicImage_HUDStatusBar_NarrowTickMarkBright" texture="EA_HUD_01" slice="XP-Bar-Separator-BONUS" handleinput="false" layer="secondary" sticky="false">
            <Size>
                <AbsPoint x="11" y="12" />
            </Size>
        </DynamicImage>

        <DynamicImage name="EA_DynamicImage_HUDStatusBar_WideTickMark" texture="EA_HUD_01" slice="Renown-Influence-Bar-Separator" handleinput="false" layer="secondary" >
            <Size>
                <AbsPoint x="11" y="14" />
            </Size>
        </DynamicImage>

        <DynamicImage name="EA_DynamicImage_HUDStatusBar_WideTickMarkMini" texture="EA_HUD_01" slice="Renown-Influence-Bar-MINI-Separator" handleinput="false" layer="secondary">
            <Size>
                <AbsPoint x="10" y="14" />
            </Size>
        </DynamicImage>

        <DynamicImage name="EA_DynamicImage_BonusLimitMarker" texture="EA_HUD_01" slice="Bar-BONUS-Limit-Marker" handleinput="false" layer="secondary">
            <Size>
                <AbsPoint x="17" y="14" />
            </Size>
        </DynamicImage>

        <DynamicImage name="EA_DynamicImage_InfluenceMarker" texture="EA_HUD_01" slice="Influence-Reward" handleinput="false" layer="secondary">
            <Size>
                <AbsPoint x="25" y="22" />
            </Size>
        </DynamicImage>



        <!--# StatusBar: EA_Window_HUDRpStatusBar         
            This is a default HUD RP Status Bar
        -->
        <Window name="EA_Window_HUDRpStatusBar" >
            <Size>
                <AbsPoint x="300" y="14" />
            </Size>
            <Windows>

                <!-- End Images -->
                <DynamicImage name="$parentLeftCap" inherits="EA_DynamicImage_HUDStatusBar_SquareEndCap_Left" handleinput="false" layer="secondary">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </DynamicImage>
                <DynamicImage name="$parentRightCap" inherits="EA_DynamicImage_HUDStatusBar_SquareEndCap_Right" handleinput="false" layer="secondary">
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" relativeTo="$parent">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </DynamicImage>


                <!-- Background Image -->
                <HorizontalResizeImage name="$parentBackground" inherits="EA_HorizontalResizeImage_HUDStatusBarBackgroundWide" handleinput="false"  popable="false" >
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="">
                            <AbsPoint x="10" y="0" />
                        </Anchor>
                        <Anchor point="topright" relativePoint="topright" relativeTo="">
                            <AbsPoint x="-10" y="0" />
                        </Anchor>
                    </Anchors>
                </HorizontalResizeImage>

                <!-- Status Bar -->
                <StatusBar name="$parentBar" inherits="EA_StatusBar_Rp" handleinput="false"  popable="false" >
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentBackground">
                            <AbsPoint x="0" y="2" />
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentBackground">
                            <AbsPoint x="0" y="2" />
                        </Anchor>
                    </Anchors>
                </StatusBar>

                <Label name="$parentText" font="font_clear_small_bold" maxchars="64" textalign="center" layer="overlay" autoresize="true" handleinput="false"  popable="false" >
                    <Size>
                        <AbsPoint x="200" y="20" />
                    </Size>
                    <Anchors>
                        <Anchor point="top" relativePoint="top" relativeTo="">
                            <AbsPoint x="0" y="2" />
                        </Anchor>
                    </Anchors>
                    <Color r="255" g="255" b="255" a="255" />
                </Label>

            </Windows>
        </Window>


    </Windows>
</Interface>
