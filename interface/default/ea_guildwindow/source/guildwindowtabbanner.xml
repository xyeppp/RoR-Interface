    <!--*******************************************************************-->
    <!--                      Whole Window Definition                      -->
    <!--*******************************************************************-->
    <Window name="GuildWindowTabBannerSocket" movable="false" layer="secondary">
      <Anchors>
        <Anchor point="topleft" relativePoint="topleft" relativeTo="GuildWindowSocket">
          <AbsPoint x="0" y="0"/>
        </Anchor>
        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="GuildWindowSocket">
          <AbsPoint x="0" y="0"/>
        </Anchor>
      </Anchors>
      <EventHandlers>
        <EventHandler event="OnInitialize" function="GuildWindowTabBanner.Initialize"/>
        <EventHandler event="OnShutdown" function="GuildWindowTabBanner.Shutdown"/>
      </EventHandlers>
      <Windows>
        <!-- Middle section background -->
        <!--
        <DynamicImage name="$parentPicture" texture="EA_Guild_BannerBGOrder" slice="order-background" layer="background" handleinput="false" popable="false" >
-->
        <DynamicImage name="$parentPicture" texture="EA_Guild_BannerBGDestruction" slice="destruction-background" layer="background" handleinput="false" popable="false">
          <Size>
            <AbsPoint x="512" y="512" />
          </Size>
          <TexDims x="512" y="512" />
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
              <AbsPoint x="10" y="5" />
            </Anchor>
            <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
              <AbsPoint x="-10" y="27" />
            </Anchor>
          </Anchors>
        </DynamicImage>

        <!-- This window is used as a Layout Window, representing the top left corner "Quadrant". Its used to easily align other windows. -->

        <Window name="$parentTopLeftQuadrant" handleinput="false">
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
              <AbsPoint x="0" y="0"/>
            </Anchor>
            <Anchor point="center" relativePoint="bottomright" relativeTo="$parent">
              <AbsPoint x="0" y="0"/>
            </Anchor>
          </Anchors>
        </Window>

        <!-- This window is used as a Layout Window, representing the bottom right corner "Quadrant". Its used to easily align other windows. -->
        <Window name="$parentBottomRightQuadrant" handleinput="false">
          <Anchors>
            <Anchor point="center" relativePoint="topleft" relativeTo="$parent">
              <AbsPoint x="0" y="0"/>
            </Anchor>
            <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
              <AbsPoint x="0" y="0"/>
            </Anchor>
          </Anchors>
        </Window>

        <!-- Banner Number Header -->
        <Label name="$parentBannerNumberHeader" font="font_guild_MP_R_17" maxchars="32" textalign="center" autoresize="false" popable="false">
          <Size>
            <AbsPoint x="225" y="32" />
          </Size>
          <Anchors>
            <Anchor point="top" relativePoint="top" relativeTo="$parentTopLeftQuadrant">
              <AbsPoint x="25" y="25" />
            </Anchor>
          </Anchors>
          <EventHandlers>
            <EventHandler event="OnMouseOver" function="GuildWindowTabBanner.OnMouseOverBannerArrow"/>
          </EventHandlers>
        </Label>

        <NifDisplay name="GuildStandardScene" nif="GuildStandardNif" layer="background" scale="1.00" ortho="false" fov="0.58" autoprops="false" rotateaxis="3">
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentTopLeftQuadrant">
              <AbsPoint x="60" y="60"/>
            </Anchor>
            <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentTopLeftQuadrant">
              <AbsPoint x="-15" y="200"/>
            </Anchor>
          </Anchors>
          <Translation x="0.0" y="-240.0" z="60.0" />
          <Rotation x="0.0" y="180.0" z="150.0" />
        </NifDisplay>

        <!-- Padlock Image -->
        <DynamicImage name="$parentLock" texture="EA_Guild" slice="lock" handleinput="true" layer="secondary">
          <Size>
            <AbsPoint x="71" y="96" />
          </Size>
          <Anchors>
            <Anchor point="bottom" relativePoint="bottom" relativeTo="GuildStandardScene">
              <AbsPoint x="0" y="-75" />
            </Anchor>
          </Anchors>
          <EventHandlers>
            <EventHandler event="OnMouseOver" function="GuildWindowTabBanner.OnMouseOverLock" />
          </EventHandlers>
        </DynamicImage>

        <!-- Banner Left Arrow -->
        <Button name="$parentLeftArrow" inherits="EA_Button_DefaultBigLeftArrow">
          <Anchors>
            <Anchor point="left" relativePoint="right" relativeTo="$parentBannerNumberHeader">
              <AbsPoint x="-10" y="2" />
