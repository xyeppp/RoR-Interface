    <Windows>

        <Window name="EA_Window_QuestTrackerNub" layer="secondary" savesettings="true">
            <Size>
                <AbsPoint x="36" y="38"/>
            </Size>
            <Anchors>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="EA_Window_OverheadMap">
                    <AbsPoint x="0" y="10"/>
                </Anchor>
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnLButtonUp"   function="EA_Window_QuestTrackerNub.ToggleWindow" />
                <EventHandler event="OnInitialize"  function="EA_Window_QuestTrackerNub.Initialize" />
            </EventHandlers>
            <Windows>
                <Button name="$parentButtonClosed" inherits="EA_Button_Default" handleinput="false"
                        backgroundtexture="EA_HUD_01" highlighttexture="EA_HUD_01" >
                    <Size>
                        <AbsPoint x="22" y="38" />
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                    <TexSlices>
                        <Normal          id="Quest-Tracker-Closed"            />
                        <NormalHighlit   id="Quest-Tracker-Closed-ROLLOVER"   />
                    </TexSlices>
                </Button>
                <Button name="$parentButtonOpen" inherits="EA_Button_Default" handleinput="false"
                        backgroundtexture="EA_HUD_01" highlighttexture="EA_HUD_01" >
                    <Size>
                        <AbsPoint x="36" y="38" />
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                    <TexSlices>
                        <Pressed         id="Quest-Tracker-Open"  />
                        <PressedHighlit  id="Quest-Tracker-Open-ROLLOVER"  />
                    </TexSlices>
                </Button>
            </Windows>
        </Window>

