 <Interface xmlns:xsi="http://www.w3.org/1501/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Windows>

         <!-- This is the pop-up window that provides information about the Layout Editor and Allows you to Save, Reset, and Exit the mode. -->
         <Window name="LayoutEditorControls" layer="popup" >      
            <Anchors>
                <Anchor point="topleft" relativePoint="topleft"/>
                <Anchor point="bottomright" relativePoint="bottomright"/>
            </Anchors>
           <EventHandlers>
                <EventHandler event="OnLButtonDown" function="LayoutEditor.TrapClick" />
                <EventHandler event="OnRButtonDown" function="LayoutEditor.TrapClick" />
            </EventHandlers>
            <Windows>
       
                <!-- Background Tint -->
                <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" 
                        handleinput="false" layer="background" alpha="0.7">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft"/>
                        <Anchor point="bottomright" relativePoint="bottomright"/>
                    </Anchors>
                    <TintColor r="0" g="0" b="0" />
				</FullResizeImage>
                    
	                   
                    
                <!-- Visible Control Window -->
                <Window name="$parentDialog" inherits="EA_Window_Default" >
                    <Size>
                        <AbsPoint x="650" y="600" />
                    </Size>
                    <Anchors>
                        <Anchor point="center" relativePoint="center" />
                    </Anchors>
                    <Windows>            
                        <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" />    
                        <Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />  
                           
                        <ScrollWindow name="$parentScrollWindow" childscrollwindow="$parentScrollChild" scrollbar="$parentScrollbar" lineheight="18" autohidescrollbar="false" >
                             <Size>
                                <AbsPoint x="630" y="410" />
                            </Size>
                            <Anchors>
                                <Anchor point="bottom" relativePoint="top" relativeTo="$parentTitleBar">
                                    <AbsPoint x="0" y="5" />
                                </Anchor>
                            </Anchors>
                            <Windows>
                                <!-- Scroll Bar -->
                                <VerticalScrollbar name="$parentScrollbar" inherits="EA_ScrollBar_DefaultVerticalChain" layer="popup">
                                    <Anchors>
                                        <Anchor point="topright" relativePoint="topright" relativeTo="$parent">
                                            <AbsPoint x="0" y="0" />
                                        </Anchor>
                                    </Anchors>
                                </VerticalScrollbar>

                                <Window name="$parentScrollChild">
                                    <Size>
                                        <AbsPoint x="600" y="490"/>
                                    </Size>
                                    <Windows>
                                        <!-- To get the scrollbar to size properly, we need to group the labels together in a container window. -->
                                        <Window name="$parentContainer">
                                            <Size>
                                                <AbsPoint x="600" y="490"/>
                                            </Size>
                                            <Anchors>
                                                <Anchor point="topleft" relativePoint="topleft" relativeTo="">
                                                    <AbsPoint x="0" y="0" />
                                                </Anchor>
                                                <Anchor point="topright" relativePoint="topright" relativeTo="" >
                                                    <AbsPoint x="0" y="0" />
                                                </Anchor>
                                            </Anchors>
                                            <Windows>
                                                <Label name="$parentDescText" inherits="EA_Label_DefaultText" autoresize="true" textalign="left" handleinput="false" wordwrap="true" >
                                                    <Size>
                                                        <AbsPoint x="600" y="35" />
                                                    </Size>
                                                    <Anchors>
                                                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                                                            <AbsPoint x="20" y="20" />
                                                        </Anchor>
                                                    </Anchors>
                                                    <Color r="255" g="255" b="255" a="255" />
                                                </Label>
                                        
                                                <Label name="$parentInstructionsLabel" inherits="EA_Label_DefaultSubHeading" autoresize="true" textalign="left" handleinput="false" wordwrap="true" >
                                                    <Size>
                                                        <AbsPoint x="600" y="35" />
                                                    </Size>
                                                    <Anchors>
                                                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentDescText">
                                                            <AbsPoint x="0" y="20" />
                                                        </Anchor>
                                                    </Anchors>
                                                </Label>
                                        
                                                <Label name="$parentInstructionsText" inherits="EA_Label_DefaultText" autoresize="true" textalign="left" handleinput="false" wordwrap="true" maxchars="2048" > 
                                                    <Size>
                                                        <AbsPoint x="570" y="35" />
                                                    </Size>
                                                    <Anchors>
                                                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentInstructionsLabel">
                                                            <AbsPoint x="15" y="5" />
                                                        </Anchor>
                                                    </Anchors>
                                                    <Color r="255" g="255" b="255" a="255" />
                                                </Label>                                                                
                                            </Windows>
                                        </Window>
                                    </Windows>
                                </Window>
                            
                            </Windows>
                            
                        </ScrollWindow>      
                        
                        <!--Buttons-->                        
                        <Window name="$parentButtonBackground" inherits="EA_Window_DefaultButtonBottomFrame" >
                            <Size>
                                <AbsPoint x="0" y="80" />
                            </Size>
                        </Window>  
                        
                        <Window name="$parentStartButtonSeparator" inherits="EA_Window_DefaultSeparator" handleinput="false" >
                            <Anchors>
                                <Anchor point="topleft" relativePoint="bottomleft" relativeTo="$parentButtonBackground" >
                                    <AbsPoint x="0" y="-45" />
                                </Anchor>
                                <Anchor point="topright" relativePoint="bottomright" relativeTo="$parentButtonBackground" >
                                    <AbsPoint x="0" y="-45" />
                                </Anchor>
                            </Anchors>
                        </Window>                    
                        
                        <Button name="$parentStartButton" inherits="LayoutEditorControlButton" >
                            <Anchors>
                                <Anchor point="top" relativePoint="bottom" relativeTo="$parentButtonBackground" >
                                    <AbsPoint x="0" y="-5" />
                                </Anchor>
                            </Anchors>
                            <EventHandlers>
                                <EventHandler event="OnLButtonUp" function="LayoutEditor.StartEditing" />
                            </EventHandlers>
                        </Button>                         
                               
                               
                         <Button name="$parentRestoreDefaultsButton" inherits="LayoutEditorControlButton" >
                            <Anchors>
                                <Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="" >
                                    <AbsPoint x="20" y="-10" />
                                </Anchor>
                            </Anchors>
                            <EventHandlers>
                                <EventHandler event="OnLButtonUp" function="LayoutEditor.RestoreDefaults" />
                               </EventHandlers>
                        </Button>           
                                              
                       <Button name="$parentExitButton" inherits="LayoutEditorControlButton" >
                            <Anchors>
                                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="" >
                                    <AbsPoint x="-20" y="-10" />
                                </Anchor>
                            </Anchors>
                            <EventHandlers>
                                <EventHandler event="OnLButtonUp" function="LayoutEditor.Exit" />
                            </EventHandlers>
                        </Button> 
                        
                    </Windows>
               
                </Window>   
            </Windows>
        </Window>
        
         <!-- HUD Controls -->
        <Window name="LayoutEditorHUDControls" inherits="EA_Window_Default" movable="true" layer="popup" >
            <Size>
                <AbsPoint x="300" y="280" />
            </Size>
            <Anchors>
                <Anchor point="center" relativePoint="center" />
            </Anchors>
            <Windows>            
                <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" />    
                <Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />                         
                        
                
               <Button name="$parentOptionsButton" inherits="LayoutEditorControlButton" >
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentTitleBar">
                            <AbsPoint x="0" y="20" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="LayoutEditor.ToggleOptions" />
                    </EventHandlers>
                </Button>    
                
               <Button name="$parentWindowsBrowserButton" inherits="LayoutEditorControlButton" >
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentOptionsButton" >
                            <AbsPoint x="0" y="10" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="LayoutEditor.ToggleWindowBrowser" />
                    </EventHandlers>
                </Button>    
                                         
                        
                <Button name="$parentRestoreDefaultsButton" inherits="LayoutEditorControlButton" >
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentWindowsBrowserButton" >
                            <AbsPoint x="0" y="10" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="LayoutEditor.RestoreDefaults" />
                        </EventHandlers>
                </Button>          
                
                                        
                <Button name="$parentExitButton" inherits="LayoutEditorControlButton" >
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentRestoreDefaultsButton" >
                            <AbsPoint x="0" y="30" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="LayoutEditor.Exit" />
                    </EventHandlers>
                </Button> 
                
            </Windows>
         </Window>
        
        <!-- Base Window that is created & shown while in the edit mode -->
		<Window name="LayoutEditorWindow" movable="false" layer="popup" popable="false"  savesettings="false" >
            <Anchors>
                <Anchor point="topleft" relativePoint="topleft" relativeTo="" />
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="" />
            </Anchors>
			<EventHandlers>
                <EventHandler event="OnUpdate" function="LayoutEditor.UpdateWhenActive" />
                <EventHandler event="OnLButtonDown" function="LayoutEditor.ClearSelection" />
                <EventHandler event="OnRButtonDown" function="LayoutEditor.TrapClick" />
                <EventHandler event="OnKeyEscape" function="LayoutEditor.ToggleControlScreen" />
                <EventHandler event="OnRawDeviceInput" function="LayoutEditor.OnRawDeviceInput" />
            </EventHandlers>
			<Windows>
				<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" 
                        handleinput="false" layer="background" alpha="0.35">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft"/>
                        <Anchor point="bottomright" relativePoint="bottomright"/>
                    </Anchors>
                    <TintColor r="150" g="150" b="150" />
				</FullResizeImage>	
				
				                       				
				<!-- Main Introduction Screen -->
				<Window name="$parentControlScreen" inherits="LayoutEditorControls" layer="overlay" />						
				
				<!-- HUD Level Controls -->
				<Window name="$parentHUDControls" inherits="LayoutEditorHUDControls" layer="popup" />					
	
				<!-- Options Screen -->
				<Window name="$parentOptions" inherits="LayoutEditorOptions" layer="popup" />					

				<!-- Advanced Window Browser -->
				<Window name="$parentControlScreenBrowser" inherits="LayoutEditorWindowBrowserTemplate" layer="popup"/>
	
		
               			
			</Windows>
		</Window>
    
       
        
   </Windows>
</Interface>