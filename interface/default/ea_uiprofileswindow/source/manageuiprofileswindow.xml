<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Scripts>
        <Script file="Source/ManageUiProfilesWindow.lua" />
    </Scripts>
    <Windows>


        <Button name="EA_Window_ManageUiProfileRowTemplate" inherits="EA_Button_DefaultListRow" >
            <Size>
                <AbsPoint x="700" y="34"/>
            </Size>
            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="EA_Window_ManageUiProfiles.OnClickUiProfileRow" />
            </EventHandlers>
            <Windows>
                <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" />
                        <Anchor point="bottomright" relativePoint="bottomright" />
                    </Anchors>
                </FullResizeImage>
                <Label name="$parentName" maxchars="80" font="font_chat_text"  handleinput="false" >
                    <Size>
                        <AbsPoint x="250" y="26"/>
                    </Size>
                    <Anchors>
                        <Anchor point="left" relativePoint="left" relativeTo="">
                            <AbsPoint x="5" y="6"/>
                        </Anchor>
                    </Anchors>
                </Label>
                <Label name="$parentLastUpdated" maxchars="80" font="font_chat_text"  handleinput="false" >
                    <Size>
                        <AbsPoint x="200" y="26"/>
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentName">
                            <AbsPoint x="5" y="0"/>
                        </Anchor>
                    </Anchors>
                </Label>
                <Button name="$parentShareButton" inherits="EA_Button_DefaultCheckBox">
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentLastUpdated">
                            <AbsPoint x="5" y="-5"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_ManageUiProfiles.OnToggleShareButton" />
                        <EventHandler event="OnMouseOver" function="EA_Window_ManageUiProfiles.OnMouseOverToggleShareButton" />
                    </EventHandlers>
                </Button>
                <Label name="$parentSharedBy" maxchars="80" font="font_chat_text" handleinput="true" >
                    <Size>
                        <AbsPoint x="200" y="26"/>
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentLastUpdated">
                            <AbsPoint x="5" y="0"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnMouseOver" function="EA_Window_ManageUiProfiles.OnMouseOverSharedText" />
                    </EventHandlers>
                </Label>
            </Windows>
        </Button>



        <Button name="UiProfileSortButton" inherits="EA_Button_ListSort" >
            <Size>
                <AbsPoint x="245" y="40" />
            </Size>
            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="EA_Window_ManageUiProfiles.OnClickProfilesListSortButton" />
                <EventHandler event="OnMouseOver" function="EA_Window_ManageUiProfiles.OnMouseOverProfilesListSortButton" />
            </EventHandlers>
        </Button>

        <!-- Customize Ui Window -->
        <Window name="EA_Window_ManageUiProfiles" movable="true" layer="secondary" inherits="EA_Window_Default" savesettings="true" >
            <Size>
                <AbsPoint x="1000" y="430" />
            </Size>
            <Anchors>
                <Anchor point="center" relativePoint="center" />
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnInitialize" function="EA_Window_ManageUiProfiles.Initialize" />
                <EventHandler event="OnShown" function="EA_Window_ManageUiProfiles.OnShown" />
                <EventHandler event="OnHidden" function="EA_Window_ManageUiProfiles.OnHidden" />
            </EventHandlers>
            <Windows>
                <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" />
                <Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />                   
                <DynamicImage name="$parentWindowImage" inherits="EA_Default_CustomizeUIImage" />    
                <Button name="$parentClose" inherits="EA_Button_DefaultWindowClose" >
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_ManageUiProfiles.Hide" />
                    </EventHandlers>
                </Button>


                <!-- Basic Instructions -->
                <Label name="$parentInstructions" font="font_chat_text" handleinput="false" wordwrap="true" autoresize="false" textAutoFitMinScale="0.75"  textalign="center" >
                    <Size>
                        <AbsPoint x="700" y="80" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentTitleBar">
                            <AbsPoint x="0" y="5" />
                        </Anchor>
                    </Anchors>
                    <Color r="255" g="204" b="102" />
                </Label>

                <Window name="$parentTopSeperator" inherits="EA_Window_DefaultSeparator" handleinput="false" >
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentTitleBar" >
                            <AbsPoint x="0" y="85" />
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="topright" relativeTo="$parentTitleBar" >
                            <AbsPoint x="0" y="85" />
                        </Anchor>
                    </Anchors>
                </Window>

                <Window name="$parentMiddleSeperator" inherits="EA_Window_DefaultVerticalSeparator" handleinput="false" >
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topright" relativeTo="$parentProfilesList" >
                            <AbsPoint x="10" y="-40" />
                        </Anchor>
                        <Anchor point="bottomleft" relativePoint="bottomright" relativeTo="$parentProfilesList" >
                            <AbsPoint x="0" y="5" />
                        </Anchor>
                    </Anchors>
                </Window>
                

                <!-- Active Profile -->
                <Label name="$parentActiveProfile" inherits="DefaultWindowSubTitle" textalign="center" wordwrap="true">
                    <Size>
                        <AbsPoint x="250" y="50" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentTopSeperator">
                            <AbsPoint x="5" y="0" />
                        </Anchor>
                    </Anchors>
                </Label>
                <Label name="$parentActiveProfileSharingInfo" inherits="DefaultWindowText" textalign="center" wordwrap="true">
                    <Size>
                        <AbsPoint x="250" y="75" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentActiveProfile">
                            <AbsPoint x="5" y="0" />
                        </Anchor>
                    </Anchors>
                </Label>

                <Button name="$parentSwitchButton" inherits="EA_Button_DefaultResizeable">
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentActiveProfileSharingInfo">
                            <AbsPoint x="0" y="50" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_ManageUiProfiles.OnSwitchButton" />
                    </EventHandlers>
                </Button>



                <!-- Sort Buttons -->
                <Button name="$parentSortButton1" inherits="UiProfileSortButton" id="1">
                    <Size>
                        <AbsPoint x="250" y="31" />
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="bottomleft" relativeTo="$parentProfilesList">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </Button>
                <Button name="$parentSortButton2" inherits="UiProfileSortButton" id="2">
                    <Size>
                        <AbsPoint x="200" y="31" />
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topleft" relativeTo="$parentSortButton1">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </Button>
                <Button name="$parentSortButton3" inherits="UiProfileSortButton" id="3">
                    <Size>
                        <AbsPoint x="275" y="31" />
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topleft" relativeTo="$parentSortButton2">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </Button>

                <DynamicImage name="$parentSortUpArrow" inherits="EA_ListSortUpArrow" />
                <DynamicImage name="$parentSortDownArrow" inherits="EA_ListSortDownArrow" />



                <ListBox name="$parentProfilesList" scrollbar="EA_ScrollBar_DefaultVerticalChain" rowdef="EA_Window_ManageUiProfileRowTemplate" visiblerows="5" rowspacing="2">
                    <Size>
                        <AbsPoint x="725" y="200" />
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright" relativeTo="$parentBackground">
                            <AbsPoint x="-10" y="140"/>
                        </Anchor>
                    </Anchors>
                    <ListData table="EA_Window_ManageUiProfiles.profilesListData" populationfunction="EA_Window_ManageUiProfiles.UpdateProfileRows">
                        <ListColumns>
                            <ListColumn windowname="Server" variable="server" format="wstring" />
                            <ListColumn windowname="Character" variable="character" format="wstring" />
                            <ListColumn windowname="Name" variable="name" format="wstring" />
                            <ListColumn windowname="LastUpdated" variable="lastUpdatedText" format="wstring" />
                        </ListColumns>
                    </ListData>
                </ListBox>


                <!-- Profile Management Buttons -->
                <Window name="$parentButtonBackground" inherits="EA_Window_DefaultButtonBottomFrame" layer="background" />


                <Button name="$parentRenameButton" inherits="EA_Button_DefaultResizeable">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="">
                            <AbsPoint x="320" y="-10" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_ManageUiProfiles.OnRenameButton" />
                    </EventHandlers>
                </Button>

                <Button name="$parentNewButton" inherits="EA_Button_DefaultResizeable">
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentRenameButton">
                            <AbsPoint x="5" y="00" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_ManageUiProfiles.OnNewButton" />
                    </EventHandlers>
                </Button>

                <Button name="$parentDeleteButton" inherits="EA_Button_DefaultResizeable">
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentNewButton">
                            <AbsPoint x="5" y="00" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_ManageUiProfiles.OnDeleteButton" />
                    </EventHandlers>
                </Button>
      
              
            </Windows>
        </Window>
        
    </Windows>
</Interface>