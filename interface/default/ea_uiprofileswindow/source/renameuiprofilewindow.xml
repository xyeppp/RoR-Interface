<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Scripts>
        <Script file="Source/RenameUiProfileWindow.lua" />
    </Scripts>
    <Windows>

        <Window name="EA_Window_UiProfileRename" movable="true" layer="popup"  savesettings="false" >
            <Size>
                <AbsPoint x="400" y="220" />
            </Size>
            <Anchors>
                <Anchor point="top" relativePoint="top" relativeTo="">
                    <AbsPoint x="0" y="325" />
                </Anchor>
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnInitialize" function="EA_Window_UiProfileRename.Initialize" />
            </EventHandlers>
            <Windows>

                <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" />
                <Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />
                <DynamicImage name="$parentWindowImage" inherits="EA_Default_CustomizeUIImage" />
                <Button name="$parentClose" inherits="EA_Button_DefaultWindowClose" >
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_UiProfileRename.OnCancelButton" />
                    </EventHandlers>
                </Button>>

                <Label name="$parentInstructions" inherits="EA_Label_DefaultSubHeading" handleinput="false" wordwrap="true" autoresize="false" textAutoFitMinScale="0.75"  textalign="center"  >
                    <Size>
                        <AbsPoint x="380" y="50" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentTitleBar">
                            <AbsPoint x="0" y="10" />
                        </Anchor>
                    </Anchors>
                </Label>

                <EditBox name="$parentEditBox" inherits="EA_EditBox_DefaultFrame" maxchars="20" taborder="1" input="textandnumbers" >
                    <Size>
                        <AbsPoint x="300" y="35" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentInstructions" >
                            <AbsPoint x="0" y="10" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnTextChanged" function="EA_Window_UiProfileRename.OnEditBoxTextChanged" />
                        <EventHandler event="OnKeyEnter" function="EA_Window_UiProfileRename.OnOkayButton" />
                        <EventHandler event="OnKeyEscape" function="EA_Window_UiProfileRename.OnCancelButton" />
                    </EventHandlers>
                </EditBox>


                <!--Buttons-->
                <Window name="$parentButtonBackground" inherits="EA_Window_DefaultButtonBottomFrame" layer="background" />

                <Button name="$parentOkayButton" inherits="EA_Button_DefaultResizeable" >
                    <Anchors>
                        <Anchor point="bottom" relativePoint="bottom" relativeTo="">
                            <AbsPoint x="-75" y="-10"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_UiProfileRename.OnOkayButton"/>
                    </EventHandlers>
                </Button>

                <Button name="$parentCancelButton" inherits="EA_Button_DefaultResizeable" >
                    <Anchors>
                        <Anchor point="bottom" relativePoint="bottom" relativeTo="">
                            <AbsPoint x="75" y="-10"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_UiProfileRename.OnCancelButton"/>
                    </EventHandlers>
                </Button>
            </Windows>
        </Window>


    </Windows>
</Interface>