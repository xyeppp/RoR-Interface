<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Scripts>
        <Script file="Source/PopupDialogUiProfileWindow.lua" />
    </Scripts>
    <Windows>

        <Window name="EA_Window_UiProfilePopupScreen" layer="popup" movable="false" popable="false" savesettings="false">
            <Anchors>
                <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
            </Anchors>
            <Windows>
                <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground"
                        handleinput="false" layer="background" alpha="0.5">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
                    </Anchors>
                    <TintColor r="0" g="0" b="0" />
                </FullResizeImage>
            </Windows>
        </Window>

        <Window name="EA_Window_UiProfilePopupDialog" movable="true" layer="popup" savesettings="false" >
            <Size>
                <AbsPoint x="600" y="225" />
            </Size>
            <Anchors>
                <Anchor point="top" relativePoint="top" relativeTo="">
                    <AbsPoint x="0" y="325" />
                </Anchor>
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnInitialize" function="EA_Window_UiProfilePopupDialog.Initialize" />
            </EventHandlers>
            <Windows>

                <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" />
                <Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />
                <DynamicImage name="$parentWindowImage" inherits="EA_Default_CustomizeUIImage" />
                <Button name="$parentClose" inherits="EA_Button_DefaultWindowClose" >
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_UiProfilePopupDialog.OnCancelButton" />
                    </EventHandlers>
                </Button>>

                <Label name="$parentInstructions" font="font_chat_text" wordwrap="true" autoresize="true" textalign="center"  >
                    <Size>
                        <AbsPoint x="540" y="150" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentTitleBar">
                            <AbsPoint x="0" y="25" />
                        </Anchor>
                    </Anchors>
                    <Color r="255" g="204" b="102" />
                </Label>

                <!--Buttons-->
                <Window name="$parentButtonBackground" inherits="EA_Window_DefaultButtonBottomFrame" layer="background" />

                <Button name="$parentOkayButton" inherits="EA_Button_DefaultResizeable" >                  
                    <Anchors>
                        <Anchor point="bottom" relativePoint="bottom" relativeTo="">
                            <AbsPoint x="-75" y="-10"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_UiProfilePopupDialog.OnOkayButton"/>
                    </EventHandlers>
                </Button>

                <Button name="$parentCancelButton" inherits="EA_Button_DefaultResizeable" >
                    <Anchors>
                        <Anchor point="bottom" relativePoint="bottom" relativeTo="">
                            <AbsPoint x="75" y="-10"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_UiProfilePopupDialog.OnCancelButton"/>
                    </EventHandlers>
                </Button>
            </Windows>
        </Window>


    </Windows>
</Interface>