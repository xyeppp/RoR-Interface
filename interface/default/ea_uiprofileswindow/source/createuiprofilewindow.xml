<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Scripts>
        <Script file="Source/CreateUiProfileWindow.lua" />
    </Scripts>
    <Windows>


        <Window name="EA_Window_CreateUiProfileCreateFromButton" inherits="EA_Window_DefaultLabelToggleCircle" >
            <Size>
                <AbsPoint x="380" y="25" />
            </Size>
            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="EA_Window_UiProfileCreate.OnClickCreateFromButton" />
            </EventHandlers>
        </Window>

        <Window name="EA_Window_UiProfileCreate" movable="true" layer="popup" savesettings="false" >
            <Size>
                <AbsPoint x="400" y="420" />
            </Size>
            <Anchors>
                <Anchor point="top" relativePoint="top" relativeTo="">
                    <AbsPoint x="0" y="325" />
                </Anchor>
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnInitialize" function="EA_Window_UiProfileCreate.Initialize" />
            </EventHandlers>
            <Windows>

                <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" />
                <DynamicImage name="$parentWindowImage" inherits="EA_Default_CustomizeUIImage" />
                <Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />
                <Button name="$parentClose" inherits="EA_Button_DefaultWindowClose" >
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_UiProfileCreate.OnCancelButton" />
                    </EventHandlers>
                </Button>


                <Label name="$parentInstructions" inherits="EA_Label_DefaultSubHeading" handleinput="false" wordwrap="true" autoresize="false" textAutoFitMinScale="0.75"  textalign="center"  >
                    <Size>
                        <AbsPoint x="380" y="50" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentTitleBar">
                            <AbsPoint x="0" y="10" />
                        </Anchor>
                    </Anchors>
                </Label>

                <EditBox name="$parentEditBox" inherits="EA_EditBox_DefaultFrame" maxchars="20" taborder="1" input="textandnumbers" >
                    <Size>
                        <AbsPoint x="300" y="35" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentInstructions" >
                            <AbsPoint x="0" y="10" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnTextChanged" function="EA_Window_UiProfileCreate.OnEditBoxTextChanged" />
                        <EventHandler event="OnKeyEnter" function="EA_Window_UiProfileCreate.OnOkayButton" />
                        <EventHandler event="OnKeyEscape" function="EA_Window_UiProfileCreate.OnCancelButton" />
                    </EventHandlers>
                </EditBox>

                <Label name="$parentCreateFromInstructions" inherits="EA_Label_DefaultSubHeading" handleinput="false" wordwrap="true" autoresize="false" textAutoFitMinScale="0.75"  textalign="center"  >
                    <Size>
                        <AbsPoint x="380" y="50" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottom" relativePoint="top" relativeTo="$parentEditBox">
                            <AbsPoint x="0" y="10" />
                        </Anchor>
                    </Anchors>
                </Label>


                <Window name="$parentCreateFromDefault" inherits="EA_Window_CreateUiProfileCreateFromButton" id="1">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentCreateFromInstructions">
                            <AbsPoint x="20" y="10" />
                        </Anchor>
                    </Anchors>
                </Window>
                <Window name="$parentCreateFromTemplate" inherits="EA_Window_CreateUiProfileCreateFromButton" id="2" >
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentCreateFromDefault">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </Window>


                <Label name="$parentSelectedTemplateText" font="font_chat_text" handleinput="false" wordwrap="true" autoresize="false" textAutoFitMinScale="0.75" textalign="leftcenter"  >
                    <Size>
                        <AbsPoint x="190" y="75" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentCreateFromTemplate">
                            <AbsPoint x="35" y="5" />
                        </Anchor>
                    </Anchors>
                </Label>

                <Button name="$parentSelectTemplateButton" inherits="EA_Button_DefaultResizeable" >
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentSelectedTemplateText">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_UiProfileCreate.OnSelectTemplateButton"/>
                    </EventHandlers>
                </Button>


                <!--Buttons-->
                <Window name="$parentButtonBackground" inherits="EA_Window_DefaultButtonBottomFrame" layer="background" />

                <Button name="$parentOkayButton" inherits="EA_Button_DefaultResizeable" >
                    <Anchors>
                        <Anchor point="bottom" relativePoint="bottom" relativeTo="">
                            <AbsPoint x="-75" y="-10"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_UiProfileCreate.OnOkayButton"/>
                    </EventHandlers>
                </Button>

                <Button name="$parentCancelButton" inherits="EA_Button_DefaultResizeable" >
                    <Anchors>
                        <Anchor point="bottom" relativePoint="bottom" relativeTo="">
                            <AbsPoint x="75" y="-10"/>
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_UiProfileCreate.OnCancelButton"/>
                    </EventHandlers>
                </Button>
            </Windows>
        </Window>


    </Windows>
</Interface>