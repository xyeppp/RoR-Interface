            </Windows>
		</Window>
		
				
		<!-- Whole Window Definition -->
		<Window name="RoRGroupScoreboard" movable="true" layer="secondary" savesettings="false" >
			<Size>
				<AbsPoint x="944" y="595"/>
			</Size>
			<Anchors>
				<Anchor point="center" relativePoint="center" relativeTo="">
					<AbsPoint x="0" y="0"/>
				</Anchor>
			</Anchors>
			<EventHandlers>
				<EventHandler event="OnInitialize" function="RoRGroupScoreboard.Initialize"/>
				<EventHandler event="OnShown" function="RoRGroupScoreboard.OnShown"/>			
				<EventHandler event="OnHidden" function="RoRGroupScoreboard.OnHidden"/>		
			</EventHandlers>
			<Windows>
			
			    <!-- General Window Settings -->
                <Window name="$parentBackground" inherits="EA_Window_DefaultTooltipBackground">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo=""/>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo=""/>
                    </Anchors>
                </Window>
				<Button name="$parentClose" inherits="EA_Button_DefaultWindowClose">
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="RoRGroupScoreboard.ToggleShowing"/>
					</EventHandlers>
				</Button>				
				
                <!-- Player List ***************************************************************************** -->

                <!-- List Border -->
                <Window name="$parentPlayerListBackground" savesettings="false" layer="background">
					<Size>
						<AbsPoint x="944" y="545"/>
					</Size>
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentScoreBackground">
							<AbsPoint x="0" y="-3"/>
						</Anchor>
					</Anchors>
				</Window>

                <!-- Sort Buttons -->
				<Window name="$parentPlayerListHeader" inherits="GroupScoreboardPlayerHeader">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentPlayerListBackground">												
							<AbsPoint x="7" y="5"/>
						</Anchor>
					</Anchors>
				</Window>
                
                <HorizontalResizeImage name="$parentDivider1" inherits="DefaultWindowRule">
                    <Size>
                        <AbsPoint x="926" y="2" />
                    </Size>
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentPlayerListHeader">
                            <AbsPoint x="0" y="2" />
                        </Anchor>
                    </Anchors>
                </HorizontalResizeImage>
				
				<!-- Listview: Order -->
				<ListBox name="$parentPlayerList" scrollbar="GroupScoreboardVertScroll" rowdef="GroupScoreboardPlayerRow" visiblerows="16" rowcount="100" rowspacing="2">
					<Size>
						<AbsPoint x="931" y="450"/> <!-- Height is also adjusted by the Lua code, so changes here need to be made in the Lua code as well -->
					</Size>
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentPlayerListHeader">
							<AbsPoint x="0" y="0"/>
						</Anchor>
					</Anchors>
					<ListData table="RoRGroupScoreboard.playersData" populationfunction="RoRGroupScoreboard.UpdatePlayerRow">
						<ListColumns>
							<ListColumn windowname="Name" variable="name"  format="wstring" />							
							<ListColumn windowname="GroupKills" variable="groupkills" format="number" style="comma"/>
							<ListColumn windowname="Deaths" variable="deaths" format="number" style="comma" />													
							<ListColumn windowname="DeathBlows" variable="deathblows" format="number" style="comma" />		
							<ListColumn windowname="DamageDealt" variable="damagedealt" format="number" style="comma" />
							<ListColumn windowname="HealingDealt" variable="healingdealt" format="number" style="comma" />
							<ListColumn windowname="Protection" variable="protection" format="number" style="comma"/>		
							<ListColumn windowname="CareerIcon" variable="careerIcon" format="icon" />		
                        </ListColumns>
					</ListData>
				</ListBox>
                
                <Button name="$parentResetButton" inherits="EA_Button_DefaultResizeable" layer="secondary">
                    <Anchors>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                            <AbsPoint x="-50" y="-10" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="RoRGroupScoreboard.OnResetClicked" />
                    </EventHandlers>
                </Button>
			</Windows>
		</Window>
	</Windows>
</Interface>
