	<Scripts>
		<Script file="RoRGroupScoreboard.lua"/>
	</Scripts>
	<Windows>
	
        <!-- Templates -->	
		<Button name="GroupScoreboardPlayerHeaderButton" inherits="EA_Button_Default" backgroundtexture="RoR_GroupScoreboard01_d8" highlighttexture="RoR_GroupScoreboard01_d8" font="font_clear_default" layer="secondary">
