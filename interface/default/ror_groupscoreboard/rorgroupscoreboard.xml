            </Windows>
        </Window>

        <Label name="PlayerRowLabel" font="font_clear_default" maxchars="80">
            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="RoRGroupScoreboard.OnLButtonUpPlayerRow" />
                <EventHandler event="OnRButtonUp" function="RoRGroupScoreboard.OnRButtonUpPlayerRow" />
            </EventHandlers>
        </Label>

        <Label name="PlayerRowLabelWithTooltip" inherits="PlayerRowLabel">
            <EventHandlers>
                <EventHandler event="OnMouseOver" function="RoRGroupScoreboard.OnMouseOverPlayerRow" />
            </EventHandlers>
        </Label>

        <!-- Single Row Definition -->
        <Window name="GroupScoreboardPlayerRow" savesettings="false">
			<Size>
				<AbsPoint x="926" y="26"/>
			</Size>
            <Windows>

                <!-- Background Pieces -->
                <FullResizeImage name="$parentBackgroundCareer" inherits="EA_FullResizeImage_TintableSolidBackground">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentCareer" />
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentCareer" />
                    </Anchors>
                </FullResizeImage>
                <FullResizeImage name="$parentBackgroundName" inherits="EA_FullResizeImage_TintableSolidBackground">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentName" />
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentName" />
                    </Anchors>
                </FullResizeImage>
                <FullResizeImage name="$parentBackgroundGroupKills" inherits="EA_FullResizeImage_TintableSolidBackground">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentGroupKills" />
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentGroupKills" />
                    </Anchors>
                </FullResizeImage>
                <FullResizeImage name="$parentBackgroundDeaths" inherits="EA_FullResizeImage_TintableSolidBackground">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentDeaths" />
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentDeaths" />
                    </Anchors>
                </FullResizeImage>
                <FullResizeImage name="$parentBackgroundDeathBlows" inherits="EA_FullResizeImage_TintableSolidBackground">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentDeathBlows" />
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentDeathBlows" />
                    </Anchors>
                </FullResizeImage>
                <FullResizeImage name="$parentBackgroundDamageDealt" inherits="EA_FullResizeImage_TintableSolidBackground">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentDamageDealt" />
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentDamageDealt" />
                    </Anchors>
                </FullResizeImage>
                <FullResizeImage name="$parentBackgroundHealingDealt" inherits="EA_FullResizeImage_TintableSolidBackground">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentHealingDealt" />
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentHealingDealt" />
                    </Anchors>
                </FullResizeImage>
                <FullResizeImage name="$parentBackgroundProtection" inherits="EA_FullResizeImage_TintableSolidBackground">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentProtection" />
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentProtection" />
                    </Anchors>
                </FullResizeImage>


                <!-- Selected Player Highlight Border -->
                <FullResizeImage name="$parentSelectionBorder" handleinput="false" layer="background" texture="EA_TilableSquareFrame_Highlight">
                    <Size>
                        <AbsPoint x="64" y="64" />
                    </Size>
                    <Sizes>
                        <TopLeft x="10" y="10" />
                        <BottomRight x="10" y="10" />
                        <Middle x="44" y="44" />
                    </Sizes>
                    <TexCoords>
                        <TopLeft x="0" y="0" />
                        <TopCenter x="10" y="0" />
                        <TopRight x="54" y="0" />
                        <MiddleLeft x="0" y="10" />
                        <MiddleCenter x="10" y="10" />
                        <MiddleRight x="54" y="10" />
                        <BottomLeft x="0" y="54" />
                        <BottomCenter x="10" y="54" />
                        <BottomRight x="54" y="54" />
                    </TexCoords>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentCareer">
                            <AbsPoint x="-4" y="-4"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentProtection">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </FullResizeImage>

                <!-- Data Labels -->
                <Label name="$parentCareer" maxchars="64" inherits="PlayerRowLabel"  textalign="center">
                    <Size>
                        <AbsPoint x="65" y="26"/>
                    </Size>
                    <Anchors>
                        <Anchor point="left" relativePoint="left" relativeTo="">
                            <AbsPoint x="5" y="6"/>
                        </Anchor>
                    </Anchors>
                </Label>
                <DynamicImage name="$parentCareerIcon">
                    <Size>
                        <AbsPoint x="34" y="25"/>
                    </Size>
                    <Anchors>
                        <Anchor point="center" relativePoint="center" relativeTo="$parentCareer">
                            <AbsPoint x="0" y="-4"/>
                        </Anchor>
                    </Anchors>
                </DynamicImage>
                <DynamicImage name="$parentArchType" layer="overlay" texturescale="1">
                    <Size>
                        <AbsPoint x="25" y="25"/>
                    </Size>
                    <Anchors>
                        <Anchor point="center" relativePoint="center" relativeTo="$parentCareerIcon">
                            <AbsPoint x="-8" y="0"/>
                        </Anchor>
                    </Anchors>
                </DynamicImage>    
                <Label name="$parentName" maxchars="80" inherits="PlayerRowLabel">
                    <Size>
                        <AbsPoint x="190.6" y="26"/>
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentCareer">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </Label>
                <Label name="$parentGroupKills" maxchars="16" inherits="PlayerRowLabelWithTooltip"  textalign="center">
                    <Size>
                        <AbsPoint x="75.6" y="26"/>
                    </Size>
                    <Anchors>
                        <Anchor point="topright" relativePoint="topleft" relativeTo="$parentName">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </Label>
                <Label name="$parentDeaths" maxchars="16" inherits="PlayerRowLabelWithTooltip"  textalign="center">
