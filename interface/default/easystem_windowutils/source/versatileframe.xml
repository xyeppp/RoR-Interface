                </Anchor>
            </Anchors>
            <Windows>
                <Button name="$parentMaxButton" inherits="EA_Button_DefaultPlus" handleinput="false" >
                    <Anchors>
                        <Anchor point="center" relativePoint="center">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </Button>
                <Button name="$parentMinButton" inherits="EA_Button_DefaultMinus" handleinput="false" >
                    <Anchors>
                        <Anchor point="center" relativePoint="center" />
                    </Anchors>
                </Button>
            </Windows>
        </Window>

