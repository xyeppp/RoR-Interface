-->
        <!-- Messge Headers-->
        <Window name="$parentHeader">
          <Size>
            <AbsPoint x="450" y="110" />
          </Size>
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
              <AbsPoint x="50" y="0" />
            </Anchor>
          </Anchors>
          <Windows>

            <!-- From -->
            <Label name="$parentFrom" inherits="MailRowHeaderTemplate">
              <Anchors>
                <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                  <AbsPoint x="0" y="5" />
                </Anchor>
              </Anchors>
            </Label>
            <Label name="$parentFromText" inherits="MailRowTextTemplate">
              <Anchors>
                <Anchor point="topright" relativePoint="topleft" relativeTo="$parentFrom">
                  <AbsPoint x="10" y="0" />
                </Anchor>
                <Anchor point="topright" relativePoint="bottomright" relativeTo="$parent">
                  <AbsPoint x="-10" y="31" /> <!-- y = top of parentFrom + y of MailRowHeaderTemplate -->
                </Anchor>
              </Anchors>
            </Label>

            <!-- Subject -->
            <Label name="$parentSubject" inherits="MailRowHeaderTemplate">
              <Anchors>
                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentFrom">
                  <AbsPoint x="0" y="0" />
                </Anchor>
              </Anchors>
            </Label>
            <Label name="$parentSubjectText" inherits="MailRowTextTemplate">
              <Anchors>
                <Anchor point="topright" relativePoint="topleft" relativeTo="$parentSubject">
                  <AbsPoint x="10" y="0" />
                </Anchor>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentFromText">
                  <AbsPoint x="0" y="24" /> <!-- y = y of MailRowHeaderTemplate -->
                </Anchor>
              </Anchors>
            </Label>

            <!-- Sent -->
            <Label name="$parentSent" inherits="MailRowHeaderTemplate">
              <Anchors>
                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentSubject">
                  <AbsPoint x="0" y="0" />
                </Anchor>
              </Anchors>
            </Label>
            <Label name="$parentSentText" inherits="MailRowTextTemplate" >
              <Anchors>
                <Anchor point="topright" relativePoint="topleft" relativeTo="$parentSent">
                  <AbsPoint x="10" y="0" />
                </Anchor>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentSubjectText">
                  <AbsPoint x="0" y="24" /> <!-- y = y of MailRowHeaderTemplate -->
                </Anchor>
              </Anchors>
            </Label>

            <!-- Expires -->
            <Label name="$parentExpires" inherits="MailRowHeaderTemplate">
              <Anchors>
                <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentSent">
                  <AbsPoint x="0" y="0" />
                </Anchor>
              </Anchors>
            </Label>
            <Label name="$parentExpiresText" inherits="MailRowTextTemplate">
              <Anchors>
                <Anchor point="topright" relativePoint="topleft" relativeTo="$parentExpires">
                  <AbsPoint x="10" y="0" />
                </Anchor>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentSentText">
                  <AbsPoint x="0" y="24" /> <!-- y = y of MailRowHeaderTemplate -->
                </Anchor>
              </Anchors>
            </Label>
          </Windows>
