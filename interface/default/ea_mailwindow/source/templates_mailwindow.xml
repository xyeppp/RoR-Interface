          <Size>
            <AbsPoint x="50" y="32"/>
          </Size>
          <Anchors>
            <Anchor point="right" relativePoint="left" relativeTo="$parentButtonMinus">
              <AbsPoint x="10" y="0" />
            </Anchor>
