    <!--  Single row template for the list of Mail Headers -->
    <Button name="EA_Button_MailRow" inherits="EA_Button_Default" drawchildrenfirst="true">
      <Size>
        <AbsPoint x="480" y="110" />
      </Size>
      <TextColors>
        <Normal r="255" g="255" b="255" a="255" />
        <NormalHighlit r="250" g="213" b="63" a="255" />
        <Pressed r="250" g="213" b="63" a="255" />
