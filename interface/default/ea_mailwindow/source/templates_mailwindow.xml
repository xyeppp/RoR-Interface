        <DynamicImage name="$parentMultipleAttachmentsImage" texture="EA_MailWindow01_32b" slice="MultiPackage" layer="secondary">
          <Size>
            <AbsPoint x="32" y="32" />
          </Size>
          <Anchors>
            <Anchor point="left" relativePoint="right" relativeTo="$parentCoinsImage">
              <AbsPoint x="-10" y="0" />
            </Anchor>
          </Anchors>
          <EventHandlers>
            <EventHandler event="OnMouseOver" function="MailWindow.OnMouseOverAttachmentItem" />
          </EventHandlers>
        </DynamicImage>

