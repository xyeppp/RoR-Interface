          <EventHandlers>
          </EventHandlers>
        </EditBox>

        <!-- Plus Button -->
        <Button name="$parentButtonPlus" inherits="EA_Button_DefaultPlus">
          <Anchors>
            <Anchor point="right" relativePoint="left" relativeTo="$parentEditBox">
              <AbsPoint x="10" y="0"/>
            </Anchor>
          </Anchors>
        </Button>

        <!-- Icon -->
        <DynamicImage name="$parentIcon" texture="assorted_hud_pieces" handleinput="false" layer="background">
          <Size>
            <AbsPoint x="19" y="19" />
          </Size>
          <Anchors>
