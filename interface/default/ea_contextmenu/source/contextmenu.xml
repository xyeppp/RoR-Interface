<!--# Title: EA_Window_ContextMenu 
    This file contains the definition of the Context Menu.
-->

<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
    <Scripts>
        <Script file="Source/ContextMenu.lua" />
    </Scripts>

    <Windows>
        <Window name="EA_Window_ContextMenu" movable="false" layer="popup" inherits="EA_Window_Default" savesettings="false" >
            <Size>
                <AbsPoint x="250" y="100" />
            </Size>
            <EventHandlers>
                <EventHandler event="OnShutdown" function="EA_Window_ContextMenu.Shutdown" />
                <EventHandler event="OnLButtonDown" function="WindowUtils.TrapClick" />
                <EventHandler event="OnShown" function="WindowUtils.OnShown" />
                <EventHandler event="OnHidden" function="WindowUtils.OnHidden" />
            </EventHandlers>
            <Windows>
                <Window name="$parentBackground" inherits="EA_Window_DefaultContextMenuFrame" >
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" >
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" >
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </Window>

                <Label name="$parentTitle" inherits="EA_Label_DefaultSubHeading" font="font_default_text_large" textalign="center" textAutoFitMinScale="0.5" autoresize="true" >
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" >
                            <AbsPoint x="5" y="10" />
                        </Anchor>
                        <Anchor point="topright" relativePoint="topright" >
                            <AbsPoint x="-5" y="10" />
                        </Anchor>
                    </Anchors>
                    <Color r="255" g="204" b="102" />
                </Label>

                <Window name="$parentAnchor" >
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" >
                            <AbsPoint x="5" y="5" />
                        </Anchor>
                        <Anchor point="topright" relativePoint="topright" >
                            <AbsPoint x="-5" y="5" />
                        </Anchor>
                    </Anchors>
                </Window>

                <!-- The menu items will be created dynamically -->

            </Windows>
        </Window>

        <Button name="EA_Button_ContextMenuItem" inherits="EA_Button_DefaultMenuButton">
            <Size>
                <AbsPoint x="1000" y="28" />
            </Size>
            <EventHandlers>
                <EventHandler event="OnLButtonUp" function="EA_Window_ContextMenu.OnLButtonUpDefaultMenuItem" />
                <EventHandler event="OnMouseOver" function="EA_Window_ContextMenu.OnMouseOverDefaultMenuItem" />
            </EventHandlers>
        </Button>

        <Button name="EA_Button_CascadingContextMenuItem" inherits="EA_Button_DefaultMenuButton" textalign="left" autoresize="false">
            <Size>
                <AbsPoint x="245" y="28" />
            </Size>
            <EventHandlers>
                <EventHandler event="OnMouseOver" function="EA_Window_ContextMenu.OnMouseOverCascadingMenuItem" />
            </EventHandlers>
            <Windows>
                <DynamicImage name="$parentCascadingArrow" texture="EA_HUD_01" layer="popup" popable="false" sticky="false" handleinput="false">
                    <Size>
                        <AbsPoint x="16" y="21" />
                    </Size>
                    <TexCoords x="457" y="463" />
                    <Anchors>
                        <Anchor point="topright" relativePoint="topright">
                            <AbsPoint x="0" y="4" />
                        </Anchor>
                    </Anchors>
                </DynamicImage>
            </Windows>
        </Button>
        
        <Window name="EA_Window_SetOpacity" movable="true" layer="popup" >
            <Size>
                <AbsPoint x="200" y="90" />
            </Size>
            <EventHandlers>
                <EventHandler event="OnLButtonDown" function="WindowUtils.TrapClick" />
                <EventHandler event="OnShown" function="WindowUtils.OnShown" />
                <EventHandler event="OnHidden" function="WindowUtils.OnHidden" />
            </EventHandlers>
            <Windows>

                <Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />

                <Button name="$parentClose" inherits="EA_Button_DefaultWindowClose">
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EA_Window_ContextMenu.CloseSetOpacityWindow" />
                    </EventHandlers>
                </Button>

                <Window name="$parentBackground" inherits="EA_Window_DefaultFrame" >
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" >
                            <AbsPoint x="0" y="32" />
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" >
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </Window>

                <SliderBar name="$parentSlider" inherits="EA_Default_SliderBar" >
                    <Size>
                        <AbsPoint x="140" y="33" />
                    </Size>
                    <Anchors>
                        <Anchor point="left" relativePoint="left" >
                            <AbsPoint x="30" y="13" />
                        </Anchor>
                    </Anchors>
                    <EventHandlers>
                        <EventHandler event="OnSlide" function="EA_Window_ContextMenu.OnSlideWindowOptionsAlpha" />
                    </EventHandlers>
                </SliderBar>
            </Windows>
        </Window>


    </Windows>
</Interface>
