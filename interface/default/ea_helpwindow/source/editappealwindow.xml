                <!-- Appeal Log Text -->
                <LogDisplay name="$parentLogDisplay" font="font_clear_medium" scrollbar="$parentScrollbar" scrollbarPosition="right" background="" textFadeTime="0" maxchars="16384">
                  <Size>
                    <AbsPoint x="600" y="300" />
                  </Size>
                  <Anchors>
                    <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentBackground" >
                      <AbsPoint x="15" y="32" />
                    </Anchor>
                    <Anchor point="topright" relativePoint="bottomright" relativeTo="$parentSeperator" >
                      <AbsPoint x="-15" y="0" />
                    </Anchor>
                  </Anchors>
                  <Windows>
                    <VerticalScrollbar name="$parentScrollbar" inherits="EA_ScrollBar_DefaultVerticalChain">
                      <Anchors>
                        <Anchor point="topright" relativePoint="topleft">
                          <AbsPoint x="-20" y="0" />
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright"/>
                      </Anchors>
                    </VerticalScrollbar>
                  </Windows>
                </LogDisplay>
              
                <!-- Seperator -->
                <Window name="$parentSeperator" inherits="EA_Window_DefaultSeparator" handleinput="false" >
                  <Anchors>
                    <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentButtonBackground" >
                      <AbsPoint x="0" y="-150" />
                    </Anchor>
                    <Anchor point="topright" relativePoint="topright" relativeTo="$parentButtonBackground" >
                      <AbsPoint x="0" y="-150" />
                    </Anchor>
                  </Anchors>
                </Window>

                <!-- Edit Appeal Edit Box -->
                <EditBox name="$parentEditBox" inherits="EA_EditBox_DefaultFrame_Multiline" taborder="1">
                  <Anchors>
                    <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentSeperator" >
                      <AbsPoint x="18" y="5" />
                    </Anchor>
                    <Anchor point="topright" relativePoint="bottomright" relativeTo="$parentButtonBackground" >
                      <AbsPoint x="-18" y="-5" />
                    </Anchor>
                  </Anchors>
                  <EventHandlers>
                    <EventHandler event="OnKeyEnter" function="" />
                    <EventHandler event="OnKeyEscape" function="" />
                  </EventHandlers>
                </EditBox>
                
                <!-- Button Bar Barground -->
                <Window name="$parentButtonBackground" inherits="EA_Window_DefaultButtonBottomFrame" layer="background" >
                  <Size>
                    <AbsPoint x="0" y="75" />
                  </Size>
                </Window>
                
                <Button name="$parentSubmit" inherits="EA_Button_DefaultResizeable" textalign="center">
                  <Anchors>
                    <Anchor point="left" relativePoint="left" relativeTo="$parentButtonBackground">
                      <AbsPoint x="25" y="5" />
                    </Anchor>
                  </Anchors>
                  <EventHandlers>
                    <EventHandler event="OnLButtonUp" function="EditAppealWindow.OnLButtonUpSubmitButton"/>
                  </EventHandlers>
                </Button>
                
                <Button name="$parentCancel" inherits="EA_Button_DefaultResizeable" textalign="center">
                  <Anchors>
                    <Anchor point="center" relativePoint="center" relativeTo="$parentButtonBackground">
                      <AbsPoint x="0" y="5" />
                    </Anchor>
                  </Anchors>
                  <EventHandlers>
                    <EventHandler event="OnLButtonUp" function="EditAppealWindow.OnLButtonUpCancelButton"/>
                  </EventHandlers>
                </Button>

                <Button name="$parentBack" inherits="EA_Button_DefaultResizeable" textalign="center">
                  <Anchors>
                    <Anchor point="right" relativePoint="right" relativeTo="$parentButtonBackground">
                      <AbsPoint x="-25" y="5" />
                    </Anchor>
                  </Anchors>
                  <EventHandlers>
                    <EventHandler event="OnLButtonUp" function="EditAppealWindow.OnLButtonUpBackButton"/>
                  </EventHandlers>
                </Button>

            </Windows>
        </Window>
