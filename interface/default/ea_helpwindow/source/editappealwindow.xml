            <Anchors>
                <Anchor point="right" relativePoint="left" relativeTo="EA_Window_Help">
                    <AbsPoint x="25" y="0" />
                </Anchor>
            </Anchors>
            <EventHandlers>
                <EventHandler event="OnInitialize"  function="EditAppealWindow.Initialize" />
                <EventHandler event="OnShutdown"    function="EditAppealWindow.Shutdown" />
                <EventHandler event="OnShown"       function="EditAppealWindow.OnShown" />
                <EventHandler event="OnHidden"      function="EditAppealWindow.OnHidden" />
            </EventHandlers>
            <Windows>
                <Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />
                <Button name="$parentClose" inherits="EA_Button_DefaultWindowClose" >
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="EditAppealWindow.Hide" />
                    </EventHandlers>
                </Button>
                <DynamicImage name="$parentCornerImage" inherits="EA_Default_HelpImage"/>

                <!-- Main Window Background -->
                <Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" handleinput="true" popable="false">
                  <Anchors>
                    <Anchor point="topleft" relativePoint="topleft" >
                      <AbsPoint x="0" y="32" />
                    </Anchor>
                    <Anchor point="bottomright" relativePoint="bottomright" />
                  </Anchors>
                </Window>

